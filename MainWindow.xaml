<Controls:MetroWindow
    x:Class="Orbit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Orbit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Orbit.Models"
    xmlns:viewmodels="clr-namespace:Orbit.ViewModels"
    xmlns:views="clr-namespace:Orbit.Views"
    Title="Orbit"
    Width="1200"
    Height="1000"
    d:DataContext="{d:DesignInstance viewmodels:MainWindowViewModel}"
    Icon="/Orbital.jpg"
    ShowTitleBar="True"
    SizeChanged="MetroWindow_SizeChanged"
    TitleCharacterCasing="Normal"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <Window.Resources>
        <!--  Converters  -->
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:SessionStateToColorConverter x:Key="SessionStateToColorConverter" />
        <converters:InjectionStateToColorConverter x:Key="InjectionStateToColorConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:ConsoleLogLevelToBrushConverter x:Key="ConsoleLogLevelToBrushConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:IsOfTypeConverter x:Key="IsOfTypeConverter" />
        <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />
        <converters:SubtractConverter x:Key="SubtractConverter" />
    </Window.Resources>

    <Grid>
        <!--  Main Content Area  -->
        <DockPanel>

            <!--  TabablzControl bound to Sessions and InterTabClient  -->
            <dragablz:TabablzControl
                x:Name="SessionTabControl"
                ItemsSource="{Binding Tabs}"
                SelectedItem="{Binding SelectedTab, Mode=TwoWay}"
                ShowDefaultCloseButton="True">

                <!--  InterTabController with binding to InterTabClient  -->
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController InterTabClient="{Binding InterTabClient}" />
                </dragablz:TabablzControl.InterTabController>

                <dragablz:TabablzControl.CustomHeaderItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="4,4,4,0"
                            Padding="12,8,12,10"
                            CornerRadius="8,8,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <!--  Default inactive tab state  -->
                                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}" />
                                    <Setter Property="Opacity" Value="0.5" />
                                    <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray7}" />
                                    <Setter Property="BorderThickness" Value="1,1,1,0" />
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect
                                                BlurRadius="3"
                                                Direction="270"
                                                Opacity="0.1"
                                                ShadowDepth="1"
                                                Color="{Binding Source={StaticResource MahApps.Colors.ThemeForeground}, FallbackValue=Black}" />
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <!--  Hover state for inactive tabs with smooth transition  -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dragablz:DragablzItem}}" Value="False" />
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.8"
                                                            Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.5"
                                                            Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>
                                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent2}" />
                                            <Setter Property="BorderThickness" Value="1.5,1.5,1.5,0" />
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect
                                                        BlurRadius="6"
                                                        Direction="270"
                                                        Opacity="0.2"
                                                        ShadowDepth="1.5"
                                                        Color="{Binding Source={StaticResource MahApps.Colors.Accent}, FallbackValue=#007ACC}" />
                                                </Setter.Value>
                                            </Setter>
                                        </MultiDataTrigger>
                                        <!--  Selected state with smooth transition  -->
                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dragablz:DragablzItem}}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="1.0"
                                                            Duration="0:0:0.25">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.5"
                                                            Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseIn" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                            <Setter Property="BorderThickness" Value="2,2,2,0" />
                                            <Setter Property="Padding" Value="12,8,12,10" />
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect
                                                        BlurRadius="10"
                                                        Direction="270"
                                                        Opacity="0.35"
                                                        ShadowDepth="3"
                                                        Color="{Binding Source={StaticResource MahApps.Colors.Accent}, FallbackValue=#007ACC}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <!--  Accent underline for selected tab with smooth fade-in  -->
                                <Rectangle
                                    Height="3"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Bottom"
                                    Fill="{DynamicResource MahApps.Brushes.Accent2}"
                                    Opacity="0"
                                    RadiusX="1.5"
                                    RadiusY="1.5">
                                    <Rectangle.Style>
                                        <Style TargetType="Rectangle">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dragablz:DragablzItem}}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetProperty="Opacity"
                                                                    To="1.0"
                                                                    Duration="0:0:0.3">
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <QuadraticEase EasingMode="EaseOut" />
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetProperty="Opacity"
                                                                    To="0.0"
                                                                    Duration="0:0:0.2">
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <QuadraticEase EasingMode="EaseIn" />
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Rectangle.Style>
                                </Rectangle>

                                <!--  Session header  -->
                                <StackPanel
                                    x:Name="SessionHeader"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <Binding
                                                            Converter="{StaticResource IsOfTypeConverter}"
                                                            ConverterParameter="Orbit.Models.SessionModel"
                                                            Path="." />
                                                    </DataTrigger.Binding>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Ellipse
                                        Width="10"
                                        Height="10"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Fill="{Binding State, Converter={StaticResource SessionStateToColorConverter}}"
                                        Stroke="{Binding InjectionState, Converter={StaticResource InjectionStateToColorConverter}}"
                                        StrokeThickness="2"
                                        ToolTip="{Binding StatusSummary}">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Style.Triggers>
                                                    <!--  Pulse animation on injecting state  -->
                                                    <DataTrigger Binding="{Binding State}" Value="{x:Static models:SessionState.Injecting}">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation
                                                                        AutoReverse="True"
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        From="1.0"
                                                                        To="0.3"
                                                                        Duration="0:0:0.8" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Text="{Binding Name}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Opacity" Value="0.7" />
                                                <Style.Triggers>
                                                    <!--  Brighter text on selected tab with smooth transition  -->
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dragablz:DragablzItem}}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        To="1.0"
                                                                        Duration="0:0:0.2">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <QuadraticEase EasingMode="EaseOut" />
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        To="0.7"
                                                                        Duration="0:0:0.15">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <QuadraticEase EasingMode="EaseIn" />
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <!--  Tool header  -->
                                <StackPanel
                                    x:Name="ToolHeader"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <Binding
                                                            Converter="{StaticResource IsOfTypeConverter}"
                                                            ConverterParameter="Orbit.Models.ToolTabItem"
                                                            Path="." />
                                                    </DataTrigger.Binding>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <iconPacks:PackIconMaterial
                                        Width="14"
                                        Height="14"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Kind="{Binding Icon}">
                                        <iconPacks:PackIconMaterial.Style>
                                            <Style TargetType="iconPacks:PackIconMaterial">
                                                <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Accent2}" />
                                                <Setter Property="Opacity" Value="0.8" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dragablz:DragablzItem}}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                                        <Setter Property="Opacity" Value="1" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </iconPacks:PackIconMaterial.Style>
                                    </iconPacks:PackIconMaterial>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Text="{Binding Name}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Opacity" Value="0.7" />
                                                <Style.Triggers>
                                                    <!--  Brighter text on selected tab with smooth transition  -->
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dragablz:DragablzItem}}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        To="1.0"
                                                                        Duration="0:0:0.2">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <QuadraticEase EasingMode="EaseOut" />
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        To="0.7"
                                                                        Duration="0:0:0.15">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <QuadraticEase EasingMode="EaseIn" />
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </dragablz:TabablzControl.CustomHeaderItemTemplate>

                <dragablz:TabablzControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Content="{Binding HostControl}" />
                    </DataTemplate>
                </dragablz:TabablzControl.ContentTemplate>
            </dragablz:TabablzControl>

        </DockPanel>

        <!--  Snap Zone Visual Indicators  -->
        <Canvas
            x:Name="SnapZoneOverlay"
            IsHitTestVisible="False"
            Visibility="{Binding IsFloatingMenuDockOverlayVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Canvas.Resources>
                <Style x:Key="SnapIndicatorStyle" TargetType="Border">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
                    <Setter Property="Opacity" Value="0.3" />
                    <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
                    <Setter Property="BorderThickness" Value="3" />
                    <Setter Property="CornerRadius" Value="24" />
                </Style>
            </Canvas.Resources>

            <!--  Left Edge Indicator  -->
            <Border
                Canvas.Left="0"
                Canvas.Top="200"
                Width="120"
                Height="400"
                Style="{StaticResource SnapIndicatorStyle}">
                <Border.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.Left}" />
                    </MultiBinding>
                </Border.Visibility>
            </Border>

            <!--  Right Edge Indicator  -->
            <Border
                Width="120"
                Height="400"
                Style="{StaticResource SnapIndicatorStyle}">
                <Border.RenderTransform>
                    <TranslateTransform X="{Binding ActualWidth, ElementName=MainWindowRoot, Converter={StaticResource SubtractConverter}, ConverterParameter=120}" Y="200" />
                </Border.RenderTransform>
                <Border.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.Right}" />
                    </MultiBinding>
                </Border.Visibility>
            </Border>

            <!--  Top Edge Indicator  -->
            <Border
                Canvas.Left="400"
                Canvas.Top="0"
                Width="400"
                Height="120"
                Style="{StaticResource SnapIndicatorStyle}">
                <Border.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.Top}" />
                    </MultiBinding>
                </Border.Visibility>
            </Border>

            <!--  Bottom Edge Indicator  -->
            <Border
                Width="400"
                Height="120"
                Style="{StaticResource SnapIndicatorStyle}">
                <Border.RenderTransform>
                    <TranslateTransform X="400" Y="{Binding ActualHeight, ElementName=MainWindowRoot, Converter={StaticResource SubtractConverter}, ConverterParameter=120}" />
                </Border.RenderTransform>
                <Border.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.Bottom}" />
                    </MultiBinding>
                </Border.Visibility>
            </Border>

            <!--  Corner Indicators  -->
            <Ellipse
                Canvas.Left="24"
                Canvas.Top="24"
                Width="80"
                Height="80"
                Fill="{DynamicResource MahApps.Brushes.Accent}"
                Opacity="0.4">
                <Ellipse.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.TopLeft}" />
                    </MultiBinding>
                </Ellipse.Visibility>
            </Ellipse>

            <Ellipse
                Canvas.Top="24"
                Width="80"
                Height="80"
                Fill="{DynamicResource MahApps.Brushes.Accent}"
                Opacity="0.4">
                <Ellipse.RenderTransform>
                    <TranslateTransform X="{Binding ActualWidth, ElementName=MainWindowRoot, Converter={StaticResource SubtractConverter}, ConverterParameter=104}" />
                </Ellipse.RenderTransform>
                <Ellipse.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.TopRight}" />
                    </MultiBinding>
                </Ellipse.Visibility>
            </Ellipse>

            <Ellipse
                Canvas.Left="24"
                Width="80"
                Height="80"
                Fill="{DynamicResource MahApps.Brushes.Accent}"
                Opacity="0.4">
                <Ellipse.RenderTransform>
                    <TranslateTransform Y="{Binding ActualHeight, ElementName=MainWindowRoot, Converter={StaticResource SubtractConverter}, ConverterParameter=104}" />
                </Ellipse.RenderTransform>
                <Ellipse.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.BottomLeft}" />
                    </MultiBinding>
                </Ellipse.Visibility>
            </Ellipse>

            <Ellipse
                Width="80"
                Height="80"
                Fill="{DynamicResource MahApps.Brushes.Accent}"
                Opacity="0.4">
                <Ellipse.RenderTransform>
                    <TranslateTransform X="{Binding ActualWidth, ElementName=MainWindowRoot, Converter={StaticResource SubtractConverter}, ConverterParameter=104}" Y="{Binding ActualHeight, ElementName=MainWindowRoot, Converter={StaticResource SubtractConverter}, ConverterParameter=104}" />
                </Ellipse.RenderTransform>
                <Ellipse.Visibility>
                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                        <Binding Path="FloatingMenuDockCandidate" />
                        <Binding Source="{x:Static models:FloatingMenuDockRegion.BottomRight}" />
                    </MultiBinding>
                </Ellipse.Visibility>
            </Ellipse>
        </Canvas>

        <Grid
            x:Name="FloatingMenuOverlayAnchor"
            Background="Transparent"
            IsHitTestVisible="False" />

        <!--  Floating Orbit Menu (Popup to stay above embedded RS window)  -->
        <Popup
            x:Name="FloatingMenuHandlePopup"
            AllowsTransparency="True"
            Focusable="False"
            HorizontalOffset="{Binding FloatingMenuLeft}"
            IsOpen="{Binding IsFloatingMenuVisible, Mode=OneWay}"
            Placement="RelativePoint"
            PlacementTarget="{Binding ElementName=FloatingMenuOverlayAnchor}"
            StaysOpen="True"
            VerticalOffset="{Binding FloatingMenuTop}">
            <Grid>
                <Border
                    x:Name="FloatingMenuHandle"
                    Padding="6"
                    Background="{DynamicResource MahApps.Brushes.Accent}"
                    CornerRadius="24"
                    MouseMove="FloatingMenu_MouseMove"
                    Opacity="{Binding FloatingMenuOpacity}"
                    PreviewMouseLeftButtonDown="FloatingMenuHandle_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="FloatingMenuHandle_PreviewMouseLeftButtonUp"
                    PreviewMouseMove="FloatingMenuHandle_PreviewMouseMove">
                    <ToggleButton
                        x:Name="FloatingMenuToggleButton"
                        Width="48"
                        Height="48"
                        IsChecked="{Binding IsFloatingMenuExpanded, Mode=TwoWay}"
                        Style="{StaticResource MahApps.Styles.Button.Circle}"
                        ToolTip="Orbit Controls">
                        <iconPacks:PackIconGameIcons
                            Width="26"
                            Height="26"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Kind="Orbital" />
                        <ToggleButton.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Header="Auto direction"
                                    IsCheckable="True"
                                    IsChecked="{Binding FloatingMenuAutoDirection, Mode=TwoWay}" />
                                <Separator />
                                <MenuItem
                                    Click="FloatingMenuSetSide_Click"
                                    Header="Left"
                                    Tag="Left" />
                                <MenuItem
                                    Click="FloatingMenuSetSide_Click"
                                    Header="Right"
                                    Tag="Right" />
                                <MenuItem
                                    Click="FloatingMenuSetSide_Click"
                                    Header="Up"
                                    Tag="Up" />
                                <MenuItem
                                    Click="FloatingMenuSetSide_Click"
                                    Header="Down"
                                    Tag="Down" />
                            </ContextMenu>
                        </ToggleButton.ContextMenu>
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Grid>
                                    <Border Background="Transparent" />
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <!--  active side indicator wedges  -->
                                    <Polygon
                                        Fill="{DynamicResource MahApps.Brushes.Accent2}"
                                        Opacity="0.9"
                                        Points="0,12 0,0 12,0"
                                        Visibility="Collapsed">
                                        <Polygon.Style>
                                            <Style TargetType="Polygon">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FloatingMenuActiveSide}" Value="{x:Static models:FloatingMenuDirection.Left}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <TranslateTransform X="6" Y="18" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Polygon.Style>
                                    </Polygon>
                                    <Polygon
                                        Fill="{DynamicResource MahApps.Brushes.Accent2}"
                                        Opacity="0.9"
                                        Points="0,0 12,0 12,12"
                                        Visibility="Collapsed">
                                        <Polygon.Style>
                                            <Style TargetType="Polygon">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FloatingMenuActiveSide}" Value="{x:Static models:FloatingMenuDirection.Right}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <TranslateTransform X="30" Y="18" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Polygon.Style>
                                    </Polygon>
                                    <Polygon
                                        Fill="{DynamicResource MahApps.Brushes.Accent2}"
                                        Opacity="0.9"
                                        Points="0,0 12,0 0,12"
                                        Visibility="Collapsed">
                                        <Polygon.Style>
                                            <Style TargetType="Polygon">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FloatingMenuActiveSide}" Value="{x:Static models:FloatingMenuDirection.Up}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <TranslateTransform X="18" Y="6" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Polygon.Style>
                                    </Polygon>
                                    <Polygon
                                        Fill="{DynamicResource MahApps.Brushes.Accent2}"
                                        Opacity="0.9"
                                        Points="12,12 12,0 0,12"
                                        Visibility="Collapsed">
                                        <Polygon.Style>
                                            <Style TargetType="Polygon">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FloatingMenuActiveSide}" Value="{x:Static models:FloatingMenuDirection.Down}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <TranslateTransform X="18" Y="30" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Polygon.Style>
                                    </Polygon>
                                </Grid>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </Border>

                <Popup
                    x:Name="FloatingMenuPopup"
                    AllowsTransparency="True"
                    IsOpen="{Binding IsFloatingMenuExpanded, Mode=TwoWay}"
                    Placement="{Binding FloatingMenuPopupPlacement}"
                    PlacementTarget="{Binding ElementName=FloatingMenuToggleButton}"
                    PopupAnimation="Slide"
                    StaysOpen="False">
                    <Border
                        x:Name="FloatingMenuPopupContent"
                        Padding="10"
                        Background="Transparent"
                        BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                        BorderThickness="1"
                        CornerRadius="16"
                        MouseMove="FloatingMenu_MouseMove"
                        Opacity="1">
                        <Grid>
                            <Rectangle
                                Fill="{DynamicResource MahApps.Brushes.ThemeBackground}"
                                Opacity="{Binding FloatingMenuBackgroundOpacity}"
                                RadiusX="16"
                                RadiusY="16" />
                            <StackPanel Margin="10" Orientation="{Binding FloatingMenuItemsOrientation}">
                                <StackPanel.Resources>
                                    <Style
                                        x:Key="FloatingMenuButtonStyle"
                                        BasedOn="{StaticResource MahApps.Styles.Button.Circle}"
                                        TargetType="Button">
                                        <Setter Property="Width" Value="48" />
                                        <Setter Property="Height" Value="48" />
                                        <Setter Property="Margin" Value="4" />
                                    </Style>
                                </StackPanel.Resources>

                                <Button
                                    Command="{Binding AddSessionCommand}"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Add Session"
                                    Visibility="{Binding ShowMenuAddSession, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="Plus" />
                                </Button>
                                <Button
                                    Command="{Binding InjectCommand}"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Inject Session"
                                    Visibility="{Binding ShowMenuInject, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="Needle" />
                                </Button>
                                <Button
                                    Command="{Binding ShowSessionsCommand}"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Manage Sessions"
                                    Visibility="{Binding ShowMenuSessions, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="ViewList" />
                                </Button>
                                <Button
                                    Command="{Binding OpenAccountManagerCommand}"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Account Manager"
                                    Visibility="{Binding ShowMenuAccountManager, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="AccountMultiple" />
                                </Button>
                                <Button
                                    Click="ScriptControlButton_Click"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Script Controls"
                                    Visibility="{Binding ShowMenuScriptControls, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="CodeBraces" />
                                </Button>
                                <Button
                                    Command="{Binding OpenThemeManagerCommand}"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Theme Manager"
                                    Visibility="{Binding ShowMenuThemeManager, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="Palette" />
                                </Button>
                                <Button
                                    Command="{Binding ToggleConsoleCommand}"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Toggle Console"
                                    Visibility="{Binding ShowMenuConsole, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="Console" />
                                </Button>
                                <Button
                                    Click="FloatingMenuSettingsButton_Click"
                                    Style="{StaticResource FloatingMenuButtonStyle}"
                                    ToolTip="Menu settings"
                                    Visibility="{Binding ShowMenuSettings, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <iconPacks:PackIconMaterial Kind="Tune" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>
        </Popup>
    </Grid>
</Controls:MetroWindow>
