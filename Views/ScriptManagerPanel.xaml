<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Orbit.Views.ScriptManagerPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    MinWidth="760"
    MinHeight="520"
    Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
    Unloaded="OnUnloaded">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="ChipStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray9}" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,6" />
        </Style>

        <DataTemplate x:Key="ScriptItemTemplate">
            <Border Style="{StaticResource ChipStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock
                            FontSize="15"
                            FontWeight="SemiBold"
                            Text="{Binding Name}" />
                        <TextBlock
                            Margin="0,2,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                            Text="{Binding Description}" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="11"
                            Foreground="{DynamicResource MahApps.Brushes.Gray4}"
                            Text="{Binding FilePath}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="32"
                            Height="32"
                            Command="{Binding DataContext.LoadScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource MahApps.Styles.Button.Circle}">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Kind="Play" />
                        </Button>

                        <Button
                            Width="32"
                            Height="32"
                            Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource MahApps.Styles.Button.Circle}"
                            ToolTip="Toggle favorite">
                            <iconPacks:PackIconMaterial Width="16" Height="16">
                                <iconPacks:PackIconMaterial.Style>
                                    <Style TargetType="iconPacks:PackIconMaterial">
                                        <Setter Property="Kind" Value="StarOutline" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                <Setter Property="Kind" Value="Star" />
                                                <Setter Property="Foreground" Value="#FFD700" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </iconPacks:PackIconMaterial.Style>
                            </iconPacks:PackIconMaterial>
                        </Button>

                        <Button
                            Width="32"
                            Height="32"
                            Command="{Binding DataContext.RemoveScriptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource MahApps.Styles.Button.Circle}"
                            ToolTip="Remove">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Kind="Close" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Main surface: header, toolbar, then three-column content (library / favorites / recents) -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border Grid.Row="0" Style="{StaticResource Orbit.ToolHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource Orbit.ToolHeaderIcon}">
                    <iconPacks:PackIconMaterial
                        Margin="10,10,0,0"
                        Width="35"
                        Height="35"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Kind="CodeBraces" />
                </Border>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Text="Script Manager" />
                    <TextBlock
                        Margin="0,6,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Opacity="0.85"
                        Text="Load, manage, and iterate on scripts with hot-reload - no file locking!" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Actions  -->
        <Border Grid.Row="1" Style="{StaticResource Orbit.ToolCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Script Path ComboBox  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        Padding="2"
                        Background="{DynamicResource MahApps.Brushes.Gray7}"
                        BorderBrush="{DynamicResource MahApps.Brushes.Gray6}"
                        BorderThickness="1"
                        CornerRadius="6">
                        <ComboBox
                            Height="36"
                            Padding="8,0"
                            FontSize="12"
                            IsEditable="True"
                            ItemsSource="{Binding RecentScriptsView}"
                            SelectedItem="{Binding SelectedScript}"
                            Text="{Binding HotReloadScriptPath, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Margin="0,0,8,0"
                                            Kind="Star"
                                            Foreground="#FFD700"
                                            Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <TextBlock
                                            Margin="0,0,10,0"
                                            FontWeight="SemiBold"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            FontSize="10"
                                            Opacity="0.6"
                                            Text="{Binding FileName}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>

                    <!--  Load/Reload Button  -->
                    <Button
                        Grid.Column="1"
                        Width="140"
                        Height="40"
                        Margin="0,0,8,0"
                        Command="{Binding LoadScriptCommand}"
                        CommandParameter="{Binding SelectedScript}"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                        ToolTip="Load or reload script with hot-reload">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Margin="0,0,6,0"
                                Kind="Play" />
                            <TextBlock Text="Load / Reload" />
                        </StackPanel>
                    </Button>

                    <!--  Reload Button  -->
                    <Button
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Command="{Binding ReloadScriptCommand}"
                        CommandParameter="{Binding SelectedScript}"
                        ToolTip="Quick reload"
                        Style="{StaticResource MahApps.Styles.Button.Circle}">
                        <iconPacks:PackIconMaterial
                            Width="18"
                            Height="18"
                            Kind="Refresh" />
                    </Button>

                    <!--  Target Session Selector  -->
                    <StackPanel
                        Grid.Column="3"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                        <Border
                            Padding="8,4"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            CornerRadius="6"
                            Opacity="0.85">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,6,0"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                    Kind="CrosshairsGps" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                    Text="Target" />
                            </StackPanel>
                        </Border>
                        <Grid Margin="10,0,0,0" VerticalAlignment="Center">
                            <Border
                                Padding="4"
                                Background="{DynamicResource MahApps.Brushes.Gray7}"
                                CornerRadius="6">
                                <ComboBox
                                    MinWidth="220"
                                    Padding="6,2"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    IsEnabled="{Binding HasSessions}"
                                    ItemsSource="{Binding Sessions}"
                                    SelectedItem="{Binding TargetSession, Mode=TwoWay}"
                                    ToolTip="Select which session receives script commands">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    FontWeight="SemiBold"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    Margin="8,0,0,0"
                                                    Opacity="0.6"
                                                    Text="{Binding RSProcess.Id, StringFormat=PID {0}}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Border>
                            <TextBlock
                                Margin="12,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                                IsHitTestVisible="False"
                                Text="No active session">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasSessions}" Value="False">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!--  Management Controls  -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                    <Button
                        Width="140"
                        Height="36"
                        Command="{Binding AddScriptCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Kind="FilePlus" />
                            <TextBlock VerticalAlignment="Center" Text="Add Script" />
                        </StackPanel>
                    </Button>

                    <Button
                        Width="160"
                        Height="36"
                        Margin="8,0,0,0"
                        Command="{Binding ClearMissingCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Kind="Broom" />
                            <TextBlock VerticalAlignment="Center" Text="Remove Missing" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Content  -->
        <Border Grid.Row="2" Style="{StaticResource Orbit.ToolCard}">
            <Grid>
                <!-- Column layout: file system library | pinned favorites | recent history -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Script Library  -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Library" />
                        <Border
                            Padding="8,2"
                            Background="{DynamicResource MahApps.Brushes.Gray8}"
                            CornerRadius="12"
                            Margin="12,0,0,0">
                            <TextBlock
                                FontSize="11"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="Default folder" />
                        </Border>
                    </StackPanel>

                    <TextBlock
                        Margin="0,6,0,0"
                        FontSize="11"
                        Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                        Text="{Binding LibraryDirectoryPath}"
                        TextWrapping="Wrap" />

                    <ListView
                        Margin="0,12,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemTemplate="{StaticResource ScriptItemTemplate}"
                        ItemsSource="{Binding LibraryScripts}"
                        MouseDoubleClick="OnScriptDoubleClick" />

                    <TextBlock
                        Margin="0,12,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource MahApps.Brushes.Gray4}"
                        Text="Drop compiled scripts into the library folder to populate this list."
                        Visibility="{Binding HasLibraryScripts, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}" />
                </StackPanel>

                <!--  Favorites  -->
                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Favorites" />
                        <Border
                            Padding="8,2"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            CornerRadius="12"
                            Margin="12,0,0,0"
                            Visibility="{Binding HasFavorites, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                Text="Pinned for quick access" />
                        </Border>
                    </StackPanel>

                    <ListView
                        x:Name="FavoritesList"
                        Margin="0,12,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemTemplate="{StaticResource ScriptItemTemplate}"
                        ItemsSource="{Binding Favorites}"
                        MouseDoubleClick="OnScriptDoubleClick" />

                    <TextBlock
                        Margin="0,12,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource MahApps.Brushes.Gray4}"
                        Text="Star scripts from the list to keep them here."
                        Visibility="{Binding HasFavorites, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}" />
                </StackPanel>

                <!--  Recent Scripts  -->
                <StackPanel Grid.Column="2">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Recent Scripts" />
                    <ListView
                        x:Name="RecentList"
                        Margin="0,12,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemTemplate="{StaticResource ScriptItemTemplate}"
                        ItemsSource="{Binding RecentScriptsView}"
                        MouseDoubleClick="OnScriptDoubleClick" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
