<UserControl
    x:Class="Orbit.Views.ConsoleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:logging="clr-namespace:Orbit.Logging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Orbit.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:ConsoleViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
    mc:Ignorable="d">
    <d:UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps Dark Theme for Designer -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </d:UserControl.Resources>
    <UserControl.Resources>
        <converters:ConsoleLogLevelToBrushConverter x:Key="ConsoleLogLevelToBrushConverter" />

        <!-- Shared Console ListBox Template -->
        <DataTemplate x:Key="ConsoleEntryTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Level Indicator  -->
                <Border
                    Grid.Column="0"
                    Width="4"
                    Height="14"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Background="{Binding Level, Converter={StaticResource ConsoleLogLevelToBrushConverter}}"
                    CornerRadius="2" />

                <!--  Message Text  -->
                <TextBlock
                    Grid.Column="1"
                    Foreground="{Binding Level, Converter={StaticResource ConsoleLogLevelToBrushConverter}}"
                    LineHeight="18"
                    Text="{Binding DisplayText}"
                    TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>

        <Style x:Key="ConsoleListBoxStyle" TargetType="ListBox">
            <Setter Property="Padding" Value="8" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="SelectionMode" Value="Extended" />
            <Setter Property="ItemTemplate" Value="{StaticResource ConsoleEntryTemplate}" />
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Padding" Value="6,3" />
                        <Setter Property="Margin" Value="0,1" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="{StaticResource Orbit.ToolPageMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Modern Console Header  -->
        <Border Grid.Row="0" Style="{StaticResource Orbit.ToolHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource Orbit.ToolHeaderIcon}">
                    <iconPacks:PackIconMaterial
                        Margin="10,10,0,0"
                        Width="35"
                        Height="35"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Kind="Console" />
                </Border>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Console Output" />
                        <Border
                            Margin="12,2,0,0"
                            Padding="6,2"
                            CornerRadius="8">
                            <Border.Background>
                                <SolidColorBrush Color="{DynamicResource MahApps.Colors.IdealForeground}" Opacity="0.15" />
                            </Border.Background>
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="{Binding ConsoleLog.Entries.Count, FallbackValue='0'}" />
                        </Border>
                    </StackPanel>
                    <TextBlock
                        Margin="0,4,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Opacity="0.85"
                        Text="Live logs from scripts, injectors, and native subsystems." />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton
                        Width="28"
                        Height="28"
                        Margin="0,0,8,0"
                        IsChecked="{Binding AutoScrollEnabled}"
                        Style="{StaticResource MahApps.Styles.ToggleButton.Square}">
                        <ToggleButton.Content>
                            <iconPacks:PackIconMaterial
                                Width="14"
                                Height="14"
                                Kind="ArrowDownBold" />
                        </ToggleButton.Content>
                        <ToggleButton.ToolTip>
                            <TextBlock>
                                <Run Text="Auto-scroll:" />
                                <Run Text="{Binding AutoScrollEnabled, Mode=OneWay, StringFormat='{}{0}'}" />
                            </TextBlock>
                        </ToggleButton.ToolTip>
                    </ToggleButton>

                    <Button
                        Width="110"
                        Height="28"
                        Margin="0,0,8,0"
                        Click="CopySelected_Click"
                        ToolTip="Copy selected log lines to the clipboard"
                        Style="{StaticResource MahApps.Styles.Button.Square}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                Kind="ContentCopy" />
                            <TextBlock VerticalAlignment="Center" Text="Copy" />
                        </StackPanel>
                    </Button>

                    <Button
                        Width="90"
                        Height="28"
                        Command="{Binding ClearCommand}"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                Kind="Broom" />
                            <TextBlock VerticalAlignment="Center" Text="Clear" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Tabbed Console Content  -->
        <Border Grid.Row="1" Style="{StaticResource Orbit.ToolCard}" Padding="0">
            <Controls:MetroTabControl
                SelectedIndex="{Binding SelectedTabIndex}"
                TabStripPlacement="Top">

                <!--  Summary Tab  -->
                <TabItem Header="Summary">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,4">
                                <iconPacks:PackIconMaterial Kind="ChartBox" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center" />
                                <TextBlock Text="Summary" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Log Sources"
                                Margin="0,0,0,12" />
                            <ItemsControl ItemsSource="{Binding Sources}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="16"
                                            Background="{DynamicResource MahApps.Brushes.Gray9}"
                                            BorderBrush="{DynamicResource MahApps.Brushes.Gray6}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding
                                                    Command="{Binding DataContext.OpenSourceTabCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    MouseAction="LeftClick" />
                                            </Border.InputBindings>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                                            <Setter Property="BorderThickness" Value="2" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                    Grid.Column="0"
                                                    Width="48"
                                                    Height="48"
                                                    Margin="0,0,16,0"
                                                    Background="{DynamicResource MahApps.Brushes.Accent}"
                                                    CornerRadius="24">
                                                    <Grid>
                                                        <Viewbox
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Margin="0,2,0,0">
                                                            <Viewbox.Style>
                                                                <Style TargetType="Viewbox">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Source}" Value="{x:Static logging:ConsoleLogSource.Orbit}">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Viewbox.Style>
                                                            <Path
                                                                Width="24"
                                                                Height="24"
                                                                Stretch="Uniform"
                                                                Data="{StaticResource Orbit.IconGeometry}"
                                                                Fill="{DynamicResource MahApps.Brushes.AccentForeground}" />
                                                        </Viewbox>
                                                        <iconPacks:PackIconMaterial
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,2,0,0"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                                            Kind="{Binding IconKind}">
                                                            <iconPacks:PackIconMaterial.Style>
                                                                <Style TargetType="iconPacks:PackIconMaterial">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Source}" Value="{x:Static logging:ConsoleLogSource.Orbit}">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </iconPacks:PackIconMaterial.Style>
                                                        </iconPacks:PackIconMaterial>
                                                    </Grid>
                                                </Border>

                                                <!--  Info  -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock
                                                        FontSize="15"
                                                        FontWeight="SemiBold"
                                                        Text="{Binding DisplayName}" />
                                                    <TextBlock
                                                        Margin="0,2,0,0"
                                                        FontSize="12"
                                                        Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                                                        Text="{Binding Description}" />
                                                </StackPanel>

                                                <!--  Statistics  -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <Border
                                                        Padding="8,4"
                                                        Background="{DynamicResource MahApps.Brushes.Accent}"
                                                        CornerRadius="4">
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="Bold"
                                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                            Text="{Binding Count, StringFormat='{}{0} logs'}" />
                                                    </Border>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                                        <Border Padding="4,2" CornerRadius="3" Margin="0,0,4,0">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="{DynamicResource MahApps.Colors.Validation5}" Opacity="0.25" />
                                                            </Border.Background>
                                                            <StackPanel Orientation="Horizontal">
                                                                <iconPacks:PackIconMaterial Kind="AlertCircle" Width="10" Height="10" Margin="0,0,3,0" Foreground="{DynamicResource MahApps.Brushes.Validation5}" />
                                                                <TextBlock FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Validation5}" Text="{Binding ErrorCount}" />
                                                            </StackPanel>
                                                        </Border>
                                                        <Border Padding="4,2" CornerRadius="3">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="{DynamicResource MahApps.Colors.Accent3}" Opacity="0.25" />
                                                            </Border.Background>
                                                            <StackPanel Orientation="Horizontal">
                                                                <iconPacks:PackIconMaterial Kind="Alert" Width="10" Height="10" Margin="0,0,3,0" Foreground="{DynamicResource MahApps.Brushes.Accent3}" />
                                                                <TextBlock FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Accent3}" Text="{Binding WarningCount}" />
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!--  All Sources Tab  -->
                <TabItem Header="All Sources">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,4">
                                <iconPacks:PackIconMaterial Kind="FormatListBulleted" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center" />
                                <TextBlock Text="All Sources" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <ListBox
                        x:Name="AllSourcesListBox"
                        ItemsSource="{Binding ConsoleLog.Entries}"
                        Style="{StaticResource ConsoleListBoxStyle}" />
                </TabItem>

                <!--  Orbit Tab  -->
                <TabItem Header="Orbit">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,4">
                                <Path Data="{StaticResource Orbit.IconGeometry}" Fill="{DynamicResource MahApps.Brushes.ThemeForeground}" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center" Stretch="Uniform" />
                                <TextBlock Text="Orbit" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <ListBox
                        x:Name="OrbitListBox"
                        ItemsSource="{Binding OrbitEntries}"
                        Style="{StaticResource ConsoleListBoxStyle}" />
                </TabItem>

                <!--  MemoryError Tab  -->
                <TabItem Header="MemoryError">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,4">
                                <iconPacks:PackIconMaterial Kind="Memory" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center" />
                                <TextBlock Text="MemoryError" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <ListBox
                        x:Name="MemoryErrorListBox"
                        ItemsSource="{Binding MemoryErrorEntries}"
                        Style="{StaticResource ConsoleListBoxStyle}" />
                </TabItem>

                <!--  Scripts Tab  -->
                <TabItem Header="Scripts">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,4">
                                <iconPacks:PackIconMaterial Kind="CodeBraces" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center" />
                                <TextBlock Text="Scripts" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <ListBox
                        x:Name="ScriptsListBox"
                        ItemsSource="{Binding ExternalEntries}"
                        Style="{StaticResource ConsoleListBoxStyle}" />
                </TabItem>

            </Controls:MetroTabControl>
        </Border>
    </Grid>
</UserControl>
