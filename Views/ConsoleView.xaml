<UserControl
    x:Class="Orbit.Views.ConsoleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Controls1="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ConsoleLogLevelToBrushConverter x:Key="ConsoleLogLevelToBrushConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Modern Console Header  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,1"
            Padding="12,8"
            Background="{DynamicResource MahApps.Brushes.Gray8}"
            BorderBrush="{DynamicResource MahApps.Brushes.Gray6}"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="18"
                        Height="18"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                        Kind="Console" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Console Output" />
                    <Border
                        Margin="10,0,0,0"
                        Padding="6,2"
                        Background="{DynamicResource MahApps.Brushes.Accent}"
                        CornerRadius="8">
                        <TextBlock
                            FontSize="10"
                            FontWeight="Bold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="{Binding ConsoleLog.Entries.Count, FallbackValue='0'}" />
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        Width="90"
                        Height="28"
                        Margin="0,0,8,0"
                        Command="{Binding CopySelectedCommand}"
                        CommandParameter="{Binding SelectedItems, ElementName=ConsoleListBox}"
                        Style="{StaticResource MahApps.Styles.Button.Square}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                Kind="ContentCopy" />
                            <TextBlock VerticalAlignment="Center" Text="Copy" />
                        </StackPanel>
                    </Button>

                    <ToggleButton
                        Width="28"
                        Height="28"
                        Margin="0,0,8,0"
                        IsChecked="{Binding AutoScrollEnabled}"
                        Style="{StaticResource MahApps.Styles.ToggleButton.Square}">
                        <ToggleButton.Content>
                            <iconPacks:PackIconMaterial
                                Width="14"
                                Height="14"
                                Kind="ArrowDownBold" />
                        </ToggleButton.Content>
                        <ToggleButton.ToolTip>
                            <TextBlock>
                                <Run Text="Auto-scroll:" />
                                <Run Text="{Binding AutoScrollEnabled, Mode=OneWay, StringFormat='{}{0}'}" />
                            </TextBlock>
                        </ToggleButton.ToolTip>
                    </ToggleButton>

                    <Button
                        Width="90"
                        Height="28"
                        Command="{Binding ClearCommand}"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                Kind="Broom" />
                            <TextBlock VerticalAlignment="Center" Text="Clear" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Enhanced Console List  -->
        <Border
            Grid.Row="1"
            Background="#FF1E1E1E"
            BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
            BorderThickness="1"
            CornerRadius="0,0,4,4">
            <ListBox
                x:Name="ConsoleListBox"
                Padding="8"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                FontFamily="Cascadia Code, Consolas, Courier New"
                FontSize="12"
                ItemsSource="{Binding ConsoleLog.Entries}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionMode="Extended">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Padding" Value="6,3" />
                        <Setter Property="Margin" Value="0,1" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Level Indicator  -->
                            <Border
                                Grid.Column="0"
                                Width="4"
                                Height="14"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Background="{Binding Level, Converter={StaticResource ConsoleLogLevelToBrushConverter}}"
                                CornerRadius="2" />

                            <!--  Message Text  -->
                            <TextBlock
                                Grid.Column="1"
                                Foreground="{Binding Level, Converter={StaticResource ConsoleLogLevelToBrushConverter}}"
                                LineHeight="18"
                                Text="{Binding DisplayText}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
