<UserControl x:Class="Orbit.Views.ChildClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
             PreviewKeyDown="ChildClientView_PreviewKeyDown"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!-- RS Client Window - Z-Index 0 (bottom) -->
        <WindowsFormsHost
            x:Name="RSPanel"
            Panel.ZIndex="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Loaded="RSPanel_Loaded"
            SizeChanged="RSPanel_SizeChanged"
            PreviewMouseDown="RSPanel_PreviewMouseDown">
            <WindowsFormsHost.Style>
                <Style TargetType="WindowsFormsHost">
                    <Setter Property="IsHitTestVisible" Value="True" />
                    <Style.Triggers>
                        <!-- Disable interaction when close confirmation is visible -->
                        <DataTrigger Binding="{Binding IsCloseConfirmationVisible}" Value="True">
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </WindowsFormsHost.Style>
        </WindowsFormsHost>

        <!-- Close Confirmation Overlay - Z-Index 100 (top) -->
        <Border
            x:Name="SessionCloseOverlay"
            Panel.ZIndex="100"
            Visibility="{Binding IsCloseConfirmationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource MahApps.Colors.ThemeBackground}" Opacity="0.92" />
            </Border.Background>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCloseConfirmationVisible}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Opacity"
                                            To="1.0"
                                            Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.0"
                                            Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="1"
                    Margin="32"
                    Padding="32"
                    Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                    CornerRadius="14"
                    RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1.0" ScaleY="1.0" />
                    </Border.RenderTransform>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="{DynamicResource MahApps.Colors.ThemeForeground}" />
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCloseConfirmationVisible}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                    From="0.9"
                                                    To="1.0"
                                                    Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <BackEase EasingMode="EaseOut" Amplitude="0.3" />
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                    From="0.9"
                                                    To="1.0"
                                                    Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <BackEase EasingMode="EaseOut" Amplitude="0.3" />
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel FocusManager.FocusedElement="{Binding ElementName=ConfirmCloseButton}">
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Width="40"
                                Height="40"
                                Margin="0,0,12,0"
                                Background="{DynamicResource MahApps.Brushes.Accent}"
                                CornerRadius="20"
                                Opacity="0.9">
                                <Viewbox Margin="8">
                                    <iconPacks:PackIconMaterial
                                        Width="20"
                                        Height="20"
                                        Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                        Kind="Alert" />
                                </Viewbox>
                            </Border>
                            <StackPanel>
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                    Text="Close this session?" />
                                <TextBlock
                                    Margin="0,6,0,0"
                                    FontSize="12"
                                    Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                                    TextWrapping="Wrap">
                                    <Run Text="Closing " />
                                    <Run FontWeight="SemiBold" Text="{Binding Name}" />
                                    <Run Text=" will terminate the embedded RuneScape client immediately." />
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock
                            Margin="0,20,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource MahApps.Brushes.Gray4}"
                            TextWrapping="Wrap"
                            Text="Unsaved in-game progress may be lost. Make sure you have safely logged out before continuing." />

                        <StackPanel Margin="0,28,0,0" HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="130"
                                Margin="0,0,12,0"
                                Padding="12,6"
                                Click="CancelCloseButton_Click"
                                Content="Keep Session"
                                IsCancel="True"
                                Style="{DynamicResource MahApps.Styles.Button.Square}" />
                            <Button
                                x:Name="ConfirmCloseButton"
                                Width="150"
                                Padding="12,6"
                                Click="ConfirmCloseButton_Click"
                                Content="Close Session"
                                IsDefault="True"
                                Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
