<?xml version="1.0" encoding="utf-8"?>
<Controls:MetroWindow
    x:Class="Orbit.Views.ThemeManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:viewModels="clr-namespace:Orbit.ViewModels"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Theme Manager"
    Icon="/Orbital.jpg"
    Width="1100"
    Height="650"
    TitleCharacterCasing="Normal"
    WindowStartupLocation="CenterOwner">

    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconMaterial
                Width="24"
                Height="24"
                Kind="Palette" />
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>

    <Window.Resources>
        <viewModels:ColorSchemeToColorConverter x:Key="ColorSchemeToColorConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Gradient Header -->
        <Border Grid.Row="0"
                CornerRadius="8,8,0,0"
                Margin="0,0,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="{DynamicResource MahApps.Colors.Accent}" Offset="0"/>
                    <GradientStop Color="{DynamicResource MahApps.Colors.Accent2}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Kind="Palette"
                                            Width="48" Height="48"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Margin="0,0,16,0"
                                            VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Theme Customization"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>
                    <TextBlock Text="Transform Orbit's appearance with built-in themes or design your own custom palette"
                               FontSize="13"
                               Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                               Opacity="0.95"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Base Themes Column -->
            <Border Grid.Column="0"
                    Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray5}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,10,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ThemeLightDark"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                            <TextBlock Text="Base Theme"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Choose light or dark mode"
                                   FontSize="11"
                                   Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button DockPanel.Dock="Bottom"
                            Command="{Binding ApplyThemeCommand}"
                            Height="36"
                            Margin="0,12,0,0"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Check" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Apply Theme" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <ListBox ItemsSource="{Binding BaseThemes}"
                             SelectedItem="{Binding SelectedBaseTheme}"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6"
                                        Margin="0,2">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="16" Height="16" VerticalAlignment="Center">
                                            <iconPacks:PackIconMaterial.Style>
                                                <Style TargetType="iconPacks:PackIconMaterial">
                                                    <Setter Property="Kind" Value="WeatherNight"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}" Value="Light">
                                                            <Setter Property="Kind" Value="WeatherSunny"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </iconPacks:PackIconMaterial.Style>
                                        </iconPacks:PackIconMaterial>
                                        <TextBlock Text="{Binding}"
                                                   FontSize="13"
                                                   Margin="10,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Color Schemes Column -->
            <Border Grid.Column="1"
                    Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray5}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,10,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FormatColorFill"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                            <TextBlock Text="Accent Color"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Select your preferred color"
                                   FontSize="11"
                                   Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding ColorSchemes}"
                             SelectedItem="{Binding SelectedColorScheme}"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6"
                                        Margin="0,2">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="20" Height="20"
                                                BorderThickness="1"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Gray5}"
                                                CornerRadius="3"
                                                VerticalAlignment="Center">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding Converter={StaticResource ColorSchemeToColorConverter}}"/>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock Text="{Binding}"
                                                   FontSize="13"
                                                   Margin="10,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Custom Themes & Preview Column -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Live Preview Section -->
                <Border Grid.Row="0"
                        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                        BorderBrush="{DynamicResource MahApps.Brushes.Gray5}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <iconPacks:PackIconMaterial Kind="Eye"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                            <TextBlock Text="Live Preview"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Preview Elements -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Content="Primary"
                                    Width="90" Height="28" Margin="0,0,8,0"
                                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"/>
                            <Button Content="Secondary"
                                    Width="90" Height="28"/>
                        </StackPanel>

                        <Border Background="{DynamicResource MahApps.Brushes.Accent}"
                                Padding="10,6"
                                CornerRadius="3"
                                Margin="0,0,0,8">
                            <TextBlock Text="Accent Background"
                                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                       FontWeight="SemiBold"/>
                        </Border>

                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#4CAF50" Margin="0,0,6,0"/>
                            <TextBlock Text="Status Indicator Example"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Custom Themes Section -->
                <Border Grid.Row="1"
                        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                        BorderBrush="{DynamicResource MahApps.Brushes.Gray5}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Custom Theme Creator -->
                        <StackPanel Grid.Row="0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="Brush"
                                                           Width="18" Height="18"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                                <TextBlock Text="Custom Theme Creator"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="Theme Name"
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding CustomThemeName, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                     FontSize="13"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Accent Color"
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <xctk:ColorCanvas
                                Width="280"
                                Height="140"
                                SelectedColor="{Binding SelectedCustomColor}"
                                Margin="0,0,0,12"/>

                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding SaveCustomThemeCommand}"
                                        Width="130" Height="32"
                                        Margin="0,0,8,0"
                                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ContentSave"
                                                                   Width="14" Height="14"
                                                                   Margin="0,0,6,0"/>
                                        <TextBlock Text="Save" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding ApplyCustomThemeCommand}"
                                        Width="130" Height="32"
                                        Margin="0,0,8,0">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Check"
                                                                   Width="14" Height="14"
                                                                   Margin="0,0,6,0"/>
                                        <TextBlock Text="Apply" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding DeleteCustomThemeCommand}"
                                        Width="90" Height="32">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Delete"
                                                                   Width="14" Height="14"
                                                                   Margin="0,0,6,0"/>
                                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Saved Custom Themes List -->
                        <GroupBox Grid.Row="1"
                                  Header="Saved Custom Themes"
                                  Margin="0,15,0,0">
                            <ListBox ItemsSource="{Binding CustomThemes}"
                                     SelectedItem="{Binding SelectedCustomTheme}"
                                     BorderThickness="0"
                                     Margin="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8,6" Margin="0,2">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="24" Height="24"
                                                        BorderThickness="1"
                                                        BorderBrush="{DynamicResource MahApps.Brushes.Gray5}"
                                                        CornerRadius="3"
                                                        VerticalAlignment="Center">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding AccentHex}"/>
                                                    </Border.Background>
                                                </Border>
                                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               FontSize="13"/>
                                                    <TextBlock Text="{Binding BaseTheme, StringFormat='Base: {0}'}"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource MahApps.Brushes.Gray2}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Controls:MetroWindow>
