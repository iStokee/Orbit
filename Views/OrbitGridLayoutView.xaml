<UserControl
    x:Class="Orbit.Views.OrbitGridLayoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:dockablz="http://dragablz.net/winfx/xaml/dockablz"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Orbit"
    xmlns:models="clr-namespace:Orbit.Models"
    xmlns:selectors="clr-namespace:Orbit.Selectors"
    Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}">

    <UserControl.Resources>
        <converters:OrbitViewCompactnessToMarginConverter x:Key="CompactnessToMarginConverter" />
        <converters:OrbitViewCompactnessToCellMarginConverter x:Key="CellMarginConverter" />
        <converters:OrbitViewBorderThicknessConverter x:Key="BorderThicknessConverter" />
        <converters:OrbitViewTabHeaderSizeToHeightConverter x:Key="TabHeaderSizeConverter" />
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

        <DataTemplate x:Key="OrbitSessionHeaderWithMenuTemplate" xmlns:local="clr-namespace:Orbit">
            <Border Padding="8,4">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=dragablz:TabablzControl}}">
                        <MenuItem
                            Header="Undock to Individual Tabs"
                            Command="{Binding DataContext.MoveToIndividualTabsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel
                    Margin="8,4"
                    Orientation="Horizontal"
                    MinHeight="{Binding Source={x:Static local:Settings.Default}, Path=OrbitViewTabHeaderSize, Converter={StaticResource TabHeaderSizeConverter}}">
                    <Ellipse
                        Width="10"
                        Height="10"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Fill="{Binding State, Converter={StaticResource SessionStateToColorConverter}}"
                        Stroke="{Binding InjectionState, Converter={StaticResource InjectionStateToColorConverter}}"
                        StrokeThickness="2"
                        ToolTip="{Binding StatusSummary}" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                        Text="{Binding DisplayName}" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Make tab headers type-aware so tools dock into Orbit View cleanly. -->
        <selectors:HeaderItemTemplateSelector
            x:Key="OrbitTabHeaderTemplateSelector"
            SessionHeaderTemplate="{StaticResource OrbitSessionHeaderWithMenuTemplate}"
            ToolHeaderTemplate="{StaticResource ToolHeaderItemTemplate}" />

        <Style
            x:Key="SessionToolbarButtonStyle"
            BasedOn="{StaticResource MahApps.Styles.Button}"
            TargetType="Button">
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="MinWidth" Value="70" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                    <Setter Property="Height" Value="28" />
                    <Setter Property="Padding" Value="8,0" />
                    <Setter Property="Margin" Value="2,0" />
                    <Setter Property="MinWidth" Value="62" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                    <Setter Property="Height" Value="26" />
                    <Setter Property="Padding" Value="6,0" />
                    <Setter Property="Margin" Value="2,0" />
                    <Setter Property="MinWidth" Value="58" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SessionToolbarNumericStyle" TargetType="{x:Type Controls:NumericUpDown}">
            <Setter Property="Height" Value="32" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                    <Setter Property="Height" Value="28" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                    <Setter Property="Height" Value="26" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrbitRootGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="16" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                    <Setter Property="Margin" Value="12" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                    <Setter Property="Margin" Value="8" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrbitToolbarRowStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                    <Setter Property="Margin" Value="0" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                    <Setter Property="Margin" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrbitToolbarGroupStyle" TargetType="Border">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray9}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray6}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                    <Setter Property="Padding" Value="4,3" />
                    <Setter Property="Margin" Value="0,0,6,0" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                    <Setter Property="Padding" Value="3,2" />
                    <Setter Property="Margin" Value="0,0,4,0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrbitToolbarDividerStyle" TargetType="Border">
            <Setter Property="Width" Value="1" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray6}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                    <Setter Property="Height" Value="24" />
                    <Setter Property="Margin" Value="6,0" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                    <Setter Property="Height" Value="20" />
                    <Setter Property="Margin" Value="4,0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <!--  Keyboard shortcuts for quick grid layout creation  -->
        <KeyBinding
            Key="D2"
            Command="{Binding CreateGrid2x2Command}"
            Modifiers="Ctrl+Shift" />
        <KeyBinding
            Key="D3"
            Command="{Binding CreateGrid3x3Command}"
            Modifiers="Ctrl+Shift" />
        <KeyBinding
            Key="R"
            Command="{Binding ResetLayoutCommand}"
            Modifiers="Ctrl+Shift" />
    </UserControl.InputBindings>

    <Grid Style="{StaticResource OrbitRootGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header with controls  -->
        <Border Grid.Row="0" HorizontalAlignment="Stretch">
            <Border.Style>
                <Style BasedOn="{StaticResource Orbit.ToolHeader}" TargetType="Border">
                    <Setter Property="Padding" Value="12" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                            <Setter Property="Padding" Value="8,6,8,6" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                            <Setter Property="Padding" Value="6,4,6,4" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Header summary (full density only)  -->
                <Grid
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Margin="0,0,16,0">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource Orbit.ToolHeaderIcon}">
                        <iconPacks:PackIconMaterial
                            Width="35"
                            Height="35"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Kind="ViewGrid" />
                    </Border>

                    <StackPanel
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center">
                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Orbit View" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Opacity="0.85"
                            Text="Live session grid - Drag to edges to split" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="11"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Opacity="0.75"
                            Text="{Binding SuggestedGridLabel}" />
                    </StackPanel>
                </Grid>

                <!--  Full layout toolbar (single aligned row)  -->
                <Grid
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Style="{StaticResource OrbitToolbarRowStyle}" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource OrbitToolbarGroupStyle}">
                                <WrapPanel VerticalAlignment="Center">
                                    <Button
                                        Command="{Binding CreateGrid2x2Command}"
                                        Style="{StaticResource SessionToolbarButtonStyle}"
                                        ToolTip="Create 2x2 Grid (Ctrl+Shift+2)">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,6,0"
                                                Kind="GridLarge" />
                                            <TextBlock FontWeight="SemiBold" Text="2x2" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Command="{Binding CreateGrid3x3Command}"
                                        Style="{StaticResource SessionToolbarButtonStyle}"
                                        ToolTip="Create 3x3 Grid (Ctrl+Shift+3)">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,6,0"
                                                Kind="Grid" />
                                            <TextBlock FontWeight="SemiBold" Text="3x3" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Command="{Binding AutoFitGridCommand}"
                                        Style="{StaticResource SessionToolbarButtonStyle}"
                                        ToolTip="Auto-fit grid to current sessions">
                                        <TextBlock FontWeight="SemiBold" Text="Auto Fit" />
                                    </Button>
                                </WrapPanel>
                            </Border>

                            <Border Grid.Column="1" Style="{StaticResource OrbitToolbarGroupStyle}">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <StackPanel
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,6,0"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Rows" />
                                        <Controls:NumericUpDown
                                            Width="70"
                                            Maximum="6"
                                            Minimum="1"
                                            Style="{StaticResource SessionToolbarNumericStyle}"
                                            Value="{Binding CustomRows, Mode=TwoWay}" />
                                    </StackPanel>
                                    <StackPanel
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,6,0"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Cols" />
                                        <Controls:NumericUpDown
                                            Width="70"
                                            Maximum="6"
                                            Minimum="1"
                                            Style="{StaticResource SessionToolbarNumericStyle}"
                                            Value="{Binding CustomColumns, Mode=TwoWay}" />
                                    </StackPanel>
                                    <Button
                                        Command="{Binding CreateCustomGridCommand}"
                                        Style="{StaticResource SessionToolbarButtonStyle}"
                                        ToolTip="Create a custom grid with the specified rows/columns">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,6,0"
                                                Kind="TableColumnWidth" />
                                            <TextBlock FontWeight="SemiBold" Text="Apply" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource OrbitToolbarGroupStyle}">
                                <WrapPanel VerticalAlignment="Center">
                                    <Button
                                        Command="{Binding ResetLayoutCommand}"
                                        Style="{StaticResource SessionToolbarButtonStyle}"
                                        ToolTip="Reset to Single View (Ctrl+Shift+R)">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,6,0"
                                                Kind="WindowRestore" />
                                            <TextBlock FontWeight="SemiBold" Text="Reset" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Command="{Binding BalanceRowsCommand}"
                                        Style="{StaticResource SessionToolbarButtonStyle}"
                                        ToolTip="Evenly resize all rows">
                                        <TextBlock FontWeight="SemiBold" Text="Balance Rows" />
                                    </Button>
                                    <Button
                                        Command="{Binding BalanceColumnsCommand}"
                                        Style="{StaticResource SessionToolbarButtonStyle}"
                                        ToolTip="Evenly resize all columns">
                                        <TextBlock FontWeight="SemiBold" Text="Balance Cols" />
                                    </Button>
                                </WrapPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Header:" />
                        <ToggleButton
                            Margin="0,0,4,0"
                            Padding="8,2"
                            Content="Full"
                            IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Full}}"
                            Style="{StaticResource MahApps.Styles.ToggleButton}" />
                        <ToggleButton
                            Margin="0,0,4,0"
                            Padding="8,2"
                            Content="Compact"
                            IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Compact}}"
                            Style="{StaticResource MahApps.Styles.ToggleButton}" />
                        <ToggleButton
                            Padding="8,2"
                            Content="Minimal"
                            IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Minimal}}"
                            Style="{StaticResource MahApps.Styles.ToggleButton}" />
                    </StackPanel>
                </Grid>

                <!--  Compact/minimal toolbar (single row with dividers)  -->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="1">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity}" Value="2">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <WrapPanel VerticalAlignment="Center">
                        <Border Style="{StaticResource OrbitToolbarGroupStyle}">
                            <WrapPanel VerticalAlignment="Center">
                                <Button
                                    Command="{Binding CreateGrid2x2Command}"
                                    Style="{StaticResource SessionToolbarButtonStyle}"
                                    ToolTip="Create 2x2 Grid (Ctrl+Shift+2)">
                                    <TextBlock FontWeight="SemiBold" Text="2x2" />
                                </Button>
                                <Button
                                    Command="{Binding CreateGrid3x3Command}"
                                    Style="{StaticResource SessionToolbarButtonStyle}"
                                    ToolTip="Create 3x3 Grid (Ctrl+Shift+3)">
                                    <TextBlock FontWeight="SemiBold" Text="3x3" />
                                </Button>
                                <Button
                                    Command="{Binding AutoFitGridCommand}"
                                    Style="{StaticResource SessionToolbarButtonStyle}"
                                    ToolTip="Auto-fit grid to current sessions">
                                    <TextBlock FontWeight="SemiBold" Text="Auto Fit" />
                                </Button>
                            </WrapPanel>
                        </Border>
                        <Border Style="{StaticResource OrbitToolbarDividerStyle}" />
                        <Border Style="{StaticResource OrbitToolbarGroupStyle}">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,6,0"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                    Text="R" />
                                <Controls:NumericUpDown
                                    Width="60"
                                    Maximum="6"
                                    Minimum="1"
                                    Style="{StaticResource SessionToolbarNumericStyle}"
                                    Value="{Binding CustomRows, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="8,0,6,0"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                    Text="C" />
                                <Controls:NumericUpDown
                                    Width="60"
                                    Maximum="6"
                                    Minimum="1"
                                    Style="{StaticResource SessionToolbarNumericStyle}"
                                    Value="{Binding CustomColumns, Mode=TwoWay}" />
                                <Button
                                    Command="{Binding CreateCustomGridCommand}"
                                    Style="{StaticResource SessionToolbarButtonStyle}"
                                    ToolTip="Create a custom grid">
                                    <TextBlock FontWeight="SemiBold" Text="Apply" />
                                </Button>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource OrbitToolbarDividerStyle}" />
                        <Border Style="{StaticResource OrbitToolbarGroupStyle}">
                            <WrapPanel VerticalAlignment="Center">
                                <Button
                                    Command="{Binding ResetLayoutCommand}"
                                    Style="{StaticResource SessionToolbarButtonStyle}"
                                    ToolTip="Reset to Single View (Ctrl+Shift+R)">
                                    <TextBlock FontWeight="SemiBold" Text="Reset" />
                                </Button>
                                <Button
                                    Command="{Binding BalanceRowsCommand}"
                                    Style="{StaticResource SessionToolbarButtonStyle}"
                                    ToolTip="Evenly resize all rows">
                                    <TextBlock FontWeight="SemiBold" Text="Rows" />
                                </Button>
                                <Button
                                    Command="{Binding BalanceColumnsCommand}"
                                    Style="{StaticResource SessionToolbarButtonStyle}"
                                    ToolTip="Evenly resize all columns">
                                    <TextBlock FontWeight="SemiBold" Text="Cols" />
                                </Button>
                            </WrapPanel>
                        </Border>
                    </WrapPanel>

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Header:" />
                        <ToggleButton
                            Margin="0,0,4,0"
                            Padding="8,2"
                            Content="Full"
                            IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Full}}"
                            Style="{StaticResource MahApps.Styles.ToggleButton}" />
                        <ToggleButton
                            Margin="0,0,4,0"
                            Padding="8,2"
                            Content="Compact"
                            IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Compact}}"
                            Style="{StaticResource MahApps.Styles.ToggleButton}" />
                        <ToggleButton
                            Padding="8,2"
                            Content="Minimal"
                            IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=OrbitHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Minimal}}"
                            Style="{StaticResource MahApps.Styles.ToggleButton}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!--  Main Layout Area using Dragablz Layout  -->
        <Border
            Grid.Row="1"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{DynamicResource MahApps.Brushes.Gray9}"
            BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
            BorderThickness="1"
            CornerRadius="6">

            <!--  Dragablz Layout Control - Native branching/splitting  -->
            <dockablz:Layout x:Name="SessionLayout" Partition="OrbitMainShell">

                <!--  BranchTemplate: Defines how each branch (tab control) looks  -->
                <!--  NOTE: Do NOT bind ItemsSource here - Dragablz manages items internally when branching  -->
                <dockablz:Layout.BranchTemplate>
                    <DataTemplate>
                        <dragablz:TabablzControl
                            Margin="{Binding Source={x:Static local:Settings.Default}, Path=OrbitViewCompactness, Converter={StaticResource CompactnessToMarginConverter}}"
                            Padding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitViewCompactness, Converter={StaticResource CellMarginConverter}}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderBrush="{DynamicResource MahApps.Brushes.IdealForeground}"
                            BorderThickness="{Binding Source={x:Static local:Settings.Default}, Path=OrbitViewBorderThickness, Converter={StaticResource BorderThicknessConverter}}"
                            ClosingItemCallback="{Binding DataContext.TabClosingHandler, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            ContentTemplateSelector="{StaticResource TabContentTemplateSelector}"
                            ItemTemplateSelector="{StaticResource OrbitTabHeaderTemplateSelector}"
                            ShowDefaultAddButton="False"
                            ShowDefaultCloseButton="True">

                            <dragablz:TabablzControl.InterTabController>
                                <dragablz:InterTabController InterTabClient="{Binding DataContext.InterTabClient, RelativeSource={RelativeSource AncestorType=UserControl}}" Partition="OrbitMainShell" />
                            </dragablz:TabablzControl.InterTabController>
                        </dragablz:TabablzControl>
                    </DataTemplate>
                </dockablz:Layout.BranchTemplate>

                <!--  Initial content: Single TabablzControl showing all sessions  -->
                <dragablz:TabablzControl
                    Margin="{Binding Source={x:Static local:Settings.Default}, Path=OrbitViewCompactness, Converter={StaticResource CompactnessToMarginConverter}}"
                    Padding="{Binding Source={x:Static local:Settings.Default}, Path=OrbitViewCompactness, Converter={StaticResource CellMarginConverter}}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                    BorderThickness="{Binding Source={x:Static local:Settings.Default}, Path=OrbitViewBorderThickness, Converter={StaticResource BorderThicknessConverter}}"
                    ClosingItemCallback="{Binding TabClosingHandler}"
                    ContentTemplateSelector="{StaticResource TabContentTemplateSelector}"
                    ItemTemplateSelector="{StaticResource OrbitTabHeaderTemplateSelector}"
                    ShowDefaultAddButton="False"
                    ShowDefaultCloseButton="True">

                    <dragablz:TabablzControl.InterTabController>
                        <dragablz:InterTabController InterTabClient="{Binding InterTabClient}" Partition="OrbitMainShell" />
                    </dragablz:TabablzControl.InterTabController>
                </dragablz:TabablzControl>

            </dockablz:Layout>

        </Border>
    </Grid>
</UserControl>
