<UserControl
    x:Class="Orbit.Views.GuideBrowserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Orbit.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:GuideBrowserViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="GuideHeaderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent}" />
            <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.Accent3}" />
        </LinearGradientBrush>

        <DropShadowEffect
            x:Key="GuideCardShadow"
            BlurRadius="12"
            Opacity="0.18"
            ShadowDepth="4" />

        <Style x:Key="GuideChapterItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="GuideChapterBorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="16" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray9}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray7}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect" Value="{StaticResource GuideCardShadow}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray8}" />
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent4}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,16"
            Padding="24,20"
            Background="{StaticResource GuideHeaderBrush}"
            CornerRadius="12">
            <DockPanel>
                <StackPanel
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Border
                        Width="56"
                        Height="56"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#1FFFFFFF"
                        CornerRadius="12">
                        <iconPacks:PackIconMaterial
                            Width="32"
                            Height="32"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Kind="BookOpenVariant" />
                    </Border>
                    <StackPanel Margin="16,0,0,0">
                        <TextBlock
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="An Orbiter's Guide to the Application" />
                        <TextBlock
                            Margin="0,4,0,0"
                            Foreground="#CCFFFFFF"
                            Text="Don't panicâ€”this is your hitchhiker's manual for everything Orbit." />
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <Button
                        Padding="16,8"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MahApps.Styles.Button}"
                        ToolTip="Reload the current chapter">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Refresh" />
                            <TextBlock Margin="8,0,0,0" Text="Refresh" />
                        </StackPanel>
                    </Button>
                    <Button
                        Margin="12,0,0,0"
                        Padding="16,8"
                        Command="{Binding OpenDocsFolderCommand}"
                        Style="{StaticResource MahApps.Styles.Button}"
                        ToolTip="Open docs folder in Explorer">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FolderInformationOutline" />
                            <TextBlock Margin="8,0,0,0" Text="Open Folder" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!--  Body  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Navigation  -->
            <Border
                Grid.Column="0"
                Padding="20"
                Background="{DynamicResource MahApps.Brushes.Gray10}"
                CornerRadius="12"
                Effect="{StaticResource GuideCardShadow}">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                        Text="Chapters" />
                    <TextBlock
                        Margin="0,2,0,16"
                        Foreground="{DynamicResource MahApps.Brushes.Gray6}"
                        Text="Pick a chapter to explore Orbit's systems." />
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemContainerStyle="{StaticResource GuideChapterItemContainerStyle}"
                        ItemsSource="{Binding Sections}"
                        SelectedItem="{Binding SelectedSection, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:GuideSection}">
                                <Border>
                                    <Border.Style>
                                        <Style BasedOn="{StaticResource GuideChapterBorderStyle}" TargetType="Border">
                                            <Setter Property="Tag" Value="{x:Null}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                    <Setter Property="Tag" Value="Selected" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <Border
                                            Width="36"
                                            Height="36"
                                            VerticalAlignment="Center"
                                            Background="{DynamicResource MahApps.Brushes.Gray8}"
                                            CornerRadius="8">
                                            <iconPacks:PackIconMaterial
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                                Kind="{Binding Icon}" />
                                        </Border>
                                        <StackPanel Margin="12,0,0,0">
                                            <TextBlock
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource MahApps.Brushes.Text}"
                                                Text="{Binding Title}" />
                                            <TextBlock
                                                Margin="0,2,0,0"
                                                Foreground="{DynamicResource MahApps.Brushes.Gray6}"
                                                Text="{Binding Description}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!--  Content  -->
            <Border
                Grid.Column="2"
                Padding="0"
                Background="{DynamicResource MahApps.Brushes.Gray10}"
                CornerRadius="12"
                Effect="{StaticResource GuideCardShadow}">
                <Grid>
                    <FlowDocumentScrollViewer
                        x:Name="DocumentViewer"
                        Margin="0"
                        Document="{Binding CurrentDocument}"
                        VerticalScrollBarVisibility="Auto" />
                    <Border
                        Panel.ZIndex="2"
                        Background="#66000000"
                        CornerRadius="12"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <mah:ProgressRing
                                Width="48"
                                Height="48"
                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                IsActive="True" />
                            <TextBlock
                                Margin="0,12,0,0"
                                Foreground="White"
                                Text="{Binding StatusMessage}"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!--  Status bar  -->
        <Border
            Grid.Row="2"
            Margin="0,16,0,0"
            Padding="16,12"
            Background="{DynamicResource MahApps.Brushes.Gray10}"
            CornerRadius="12"
            Effect="{StaticResource GuideCardShadow}">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial
                    Width="18"
                    Height="18"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Kind="HelpCircleOutline" />
                <TextBlock
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource MahApps.Brushes.Gray6}"
                    Text="{Binding StatusMessage}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
