<UserControl x:Class="Orbit.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:converters="clr-namespace:Orbit.Converters"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <iconPacks:PackIconMaterial Kind="Tune" Height="18" Width="18"/>
                <TextBlock Margin="8,0,0,0" Text="Orbit Settings" FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>
            </StackPanel>

            <TextBlock Text="Floating Menu" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"
                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>

            <StackPanel Orientation="Vertical" Margin="0,4,0,0">
                <TextBlock FontWeight="SemiBold" Text="Hide after" Margin="0,0,0,4"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                <Slider Minimum="0.5" Maximum="8" TickFrequency="0.5" IsSnapToTickEnabled="True"
                        Value="{Binding FloatingMenuInactivitySeconds, Mode=TwoWay}"
                        Margin="0,0,0,2" />
                <TextBlock FontSize="12"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                           Text="{Binding FloatingMenuInactivitySeconds, StringFormat={}{0:0.0}s}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                <TextBlock FontWeight="SemiBold" Text="Handle (button) opacity" Margin="0,0,0,4"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                <Slider Minimum="0.35" Maximum="1" TickFrequency="0.05" Margin="0,0,0,2"
                        Value="{Binding FloatingMenuOpacity, Mode=TwoWay}" />
                <TextBlock FontSize="12"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                           Text="{Binding FloatingMenuOpacity, StringFormat={}{0:P0}}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                <TextBlock FontWeight="SemiBold" Text="Menu background opacity" Margin="0,0,0,4"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                <Slider Minimum="0.2" Maximum="1" TickFrequency="0.05" Margin="0,0,0,2"
                        Value="{Binding FloatingMenuBackgroundOpacity, Mode=TwoWay}" />
                <TextBlock FontSize="12"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                           Text="{Binding FloatingMenuBackgroundOpacity, StringFormat={}{0:P0}}" />
            </StackPanel>

            <Controls:ToggleSwitch Header="Auto direction (expand inward from nearest edge)"
                                   IsOn="{Binding FloatingMenuAutoDirection, Mode=TwoWay}"
                                   Margin="0,12,0,0" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold"
                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                           Text="Manual direction" />
                <ComboBox Width="160"
                          Margin="12,0,0,0"
                          IsEnabled="{Binding FloatingMenuAutoDirection, Converter={StaticResource InverseBooleanConverter}}"
                          ItemsSource="{Binding FloatingMenuDirectionOptions}"
                          SelectedItem="{Binding FloatingMenuDirection, Mode=TwoWay}" />
            </StackPanel>

            <TextBlock Text="Floating Menu Visibility" FontSize="14" FontWeight="SemiBold" Margin="0,16,0,8"
                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>

            <Controls:ToggleSwitch Header="Show on Session tabs (RS clients)"
                                   IsOn="{Binding ShowFloatingMenuOnSessionTabs, Mode=TwoWay}"
                                   Margin="0,4" />
            <Controls:ToggleSwitch Header="Show on Tool tabs (Console, Script Manager, etc.)"
                                   IsOn="{Binding ShowFloatingMenuOnToolTabs, Mode=TwoWay}"
                                   Margin="0,4,0,12" />

            <TextBlock Text="Menu Button Visibility" FontSize="14" FontWeight="SemiBold" Margin="0,16,0,8"
                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>

            <StackPanel Orientation="Vertical" Margin="0,0,0,8">
                <Controls:ToggleSwitch Header="Add Session"
                                       IsOn="{Binding ShowMenuAddSession, Mode=TwoWay}"
                                       Margin="0,4" />
                <Controls:ToggleSwitch Header="Inject"
                                       IsOn="{Binding ShowMenuInject, Mode=TwoWay}"
                                       Margin="0,4" />
                <Controls:ToggleSwitch Header="Manage Sessions"
                                       IsOn="{Binding ShowMenuSessions, Mode=TwoWay}"
                                       Margin="0,4" />
                <Controls:ToggleSwitch Header="Account Manager"
                                       IsOn="{Binding ShowMenuAccountManager, Mode=TwoWay}"
                                       Margin="0,4" />
                <Controls:ToggleSwitch Header="Script Controls"
                                       IsOn="{Binding ShowMenuScriptControls, Mode=TwoWay}"
                                       Margin="0,4" />
                <Controls:ToggleSwitch Header="Theme Manager"
                                       IsOn="{Binding ShowMenuThemeManager, Mode=TwoWay}"
                                       Margin="0,4" />
                <Controls:ToggleSwitch Header="Console"
                                       IsOn="{Binding ShowMenuConsole, Mode=TwoWay}"
                                       Margin="0,4" />
                <Controls:ToggleSwitch Header="Settings"
                                       IsOn="{Binding ShowMenuSettings, Mode=TwoWay}"
                                       Margin="0,4" />
            </StackPanel>

            <TextBlock Text="Sessions" FontSize="14" FontWeight="SemiBold" Margin="0,16,0,8"
                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>

            <Controls:ToggleSwitch Header="Auto-inject when session is ready"
                                   IsOn="{Binding AutoInjectOnReady, Mode=TwoWay}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
