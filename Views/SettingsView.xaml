<UserControl
    x:Class="Orbit.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Style x:Key="Orbit.SettingsCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,20,0,0" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray6}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="14"
                        Opacity="0.12"
                        ShadowDepth="2"
                        Color="{DynamicResource MahApps.Colors.ThemeForeground}" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Orbit.ValuePillStyle" TargetType="Border">
            <Setter Property="Margin" Value="12,0,0,0" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray7}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <Border Padding="20" CornerRadius="14">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent}" />
                        <GradientStop Offset="0.55" Color="{DynamicResource MahApps.Colors.Accent2}" />
                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.Accent3}" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Width="56"
                        Height="56"
                        VerticalAlignment="Center"
                        Background="#1FFFFFFF"
                        CornerRadius="28"
                        Opacity="0.8">
                        <iconPacks:PackIconMaterial
                            Width="34"
                            Height="34"
                            Margin="0,0,0,2"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Kind="Tune" />
                    </Border>

                    <StackPanel
                        Grid.Column="1"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Orbit Control Surface" />
                        <TextBlock
                            Margin="0,6,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Opacity="0.85"
                            Text="Shape the floating launcher and decide which quick actions stay within reach." />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Style="{StaticResource Orbit.SettingsCardStyle}">
                <StackPanel>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Border
                            Width="32"
                            Height="32"
                            Margin="0,0,12,0"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            CornerRadius="16"
                            Opacity="0.8">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                Margin="0,0,0,1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Kind="TuneVariant" />
                        </Border>
                        <StackPanel>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="Floating menu behavior" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                Text="Dial in fade timing, handle translucency, and background blending." />
                        </StackPanel>
                    </StackPanel>

                    <Grid Margin="0,18,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Hide after" />
                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{StaticResource Orbit.ValuePillStyle}">
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="{Binding FloatingMenuInactivitySeconds, StringFormat={}{0:0.0}s}" />
                        </Border>
                        <Slider
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="0,6,0,0"
                            IsSnapToTickEnabled="True"
                            Maximum="8"
                            Minimum="0.5"
                            TickFrequency="0.5"
                            Value="{Binding FloatingMenuInactivitySeconds, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,16,0,0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Handle opacity" />
                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,16,0,0"
                            Style="{StaticResource Orbit.ValuePillStyle}">
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="{Binding FloatingMenuOpacity, StringFormat={}{0:P0}}" />
                        </Border>
                        <Slider
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="0,6,0,0"
                            Maximum="1"
                            Minimum="0.35"
                            TickFrequency="0.05"
                            Value="{Binding FloatingMenuOpacity, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,16,0,0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Menu background opacity" />
                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,16,0,0"
                            Style="{StaticResource Orbit.ValuePillStyle}">
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="{Binding FloatingMenuBackgroundOpacity, StringFormat={}{0:P0}}" />
                        </Border>
                        <Slider
                            Grid.Row="5"
                            Grid.ColumnSpan="2"
                            Margin="0,6,0,0"
                            Maximum="1"
                            Minimum="0.2"
                            TickFrequency="0.05"
                            Value="{Binding FloatingMenuBackgroundOpacity, Mode=TwoWay}" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Orbit.SettingsCardStyle}">
                <StackPanel>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Border
                            Width="32"
                            Height="32"
                            Margin="0,0,12,0"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            CornerRadius="16"
                            Opacity="0.8">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Kind="CrosshairsGps" />
                        </Border>
                        <StackPanel>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="Placement and visibility" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                Text="Choose how the radial menu expands and which surfaces it follows." />
                        </StackPanel>
                    </StackPanel>

                    <Controls:ToggleSwitch
                        Margin="0,18,0,0"
                        Header="Auto direction (Orbit picks the cleanest expansion)"
                        IsOn="{Binding FloatingMenuAutoDirection, Mode=TwoWay}" />

                    <Grid Margin="0,12,0,0" IsEnabled="{Binding FloatingMenuAutoDirection, Converter={StaticResource InverseBooleanConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Manual direction" />
                        <ComboBox
                            Grid.Column="1"
                            Height="30"
                            Margin="12,0,0,0"
                            ItemsSource="{Binding FloatingMenuDirectionOptions}"
                            SelectedItem="{Binding FloatingMenuDirection, Mode=TwoWay}" />
                    </Grid>

                    <Separator Margin="0,20,0,14" Opacity="0.35" />

                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                        Text="Where should the handle appear?"
                        TextWrapping="Wrap" />

                    <StackPanel Margin="0,10,0,0">
                        <Controls:ToggleSwitch
                            Margin="0,4"
                            Header="Show on session tabs (embedded RS clients)"
                            IsOn="{Binding ShowFloatingMenuOnSessionTabs, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="0,4"
                            Header="Show on tool tabs (Console, Script Manager, etc.)"
                            IsOn="{Binding ShowFloatingMenuOnToolTabs, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Orbit.SettingsCardStyle}">
                <StackPanel>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Border
                            Width="32"
                            Height="32"
                            Margin="0,0,12,0"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            CornerRadius="16"
                            Opacity="0.8">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Kind="ViewGrid" />
                        </Border>
                        <StackPanel>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="Menu buttons" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                Text="Keep only the quick actions you frequently reach for." />
                        </StackPanel>
                    </StackPanel>

                    <UniformGrid
                        Margin="0,18,0,0"
                        HorizontalAlignment="Stretch"
                        Columns="2">
                        <Controls:ToggleSwitch
                            Margin="0,4,12,4"
                            Header="Add Session"
                            IsOn="{Binding ShowMenuAddSession, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="12,4,0,4"
                            Header="Inject"
                            IsOn="{Binding ShowMenuInject, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="0,4,12,4"
                            Header="Manage Sessions"
                            IsOn="{Binding ShowMenuSessions, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="12,4,0,4"
                            Header="Account Manager"
                            IsOn="{Binding ShowMenuAccountManager, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="0,4,12,4"
                            Header="Script Controls"
                            IsOn="{Binding ShowMenuScriptControls, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="12,4,0,4"
                            Header="Theme Manager"
                            IsOn="{Binding ShowMenuThemeManager, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="0,4,12,4"
                            Header="Console"
                            IsOn="{Binding ShowMenuConsole, Mode=TwoWay}" />
                        <Controls:ToggleSwitch
                            Margin="12,4,0,4"
                            Header="Settings"
                            IsOn="{Binding ShowMenuSettings, Mode=TwoWay}" />
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Orbit.SettingsCardStyle}">
                <StackPanel>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Border
                            Width="32"
                            Height="32"
                            Margin="0,0,12,0"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            CornerRadius="16"
                            Opacity="0.8">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Kind="ChartTimelineVariant" />
                        </Border>
                        <StackPanel>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="Automation and diagnostics" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                Text="Let Orbit get you into game faster and surface theme insights when you need them." />
                        </StackPanel>
                    </StackPanel>

                    <Controls:ToggleSwitch
                        Margin="0,16,0,0"
                        Header="Auto-inject when session is ready"
                        IsOn="{Binding AutoInjectOnReady, Mode=TwoWay}" />

                    <Controls:ToggleSwitch
                        Margin="0,8,0,0"
                        Header="Show MemoryError debug overlay"
                        IsOn="{Binding ShowMemoryErrorDebug, Mode=TwoWay}" />

                    <Separator Margin="0,20,0,12" Opacity="0.35" />

                    <Controls:ToggleSwitch
                        Margin="0,4"
                        Header="Enable theme debug logging"
                        IsOn="{Binding IsThemeLoggingEnabled, Mode=TwoWay}" />

                    <StackPanel
                        Margin="0,12,0,0"
                        Orientation="Vertical"
                        Visibility="{Binding IsThemeLoggingEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border
                            Padding="12"
                            Background="{DynamicResource MahApps.Brushes.Gray7}"
                            CornerRadius="8">
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                TextWrapping="Wrap">
                                <Run Text="Theme changes and resource assignments are logged to:" />
                                <LineBreak />
                                <Run
                                    FontFamily="Consolas"
                                    FontWeight="SemiBold"
                                    Text="{Binding ThemeLogFilePath, Mode=OneWay}" />
                            </TextBlock>
                        </Border>
                        <StackPanel Margin="0,12,0,0" Orientation="Horizontal">
                            <Button
                                Width="130"
                                Margin="0,0,8,0"
                                Command="{Binding OpenThemeLogCommand}"
                                Content="Open log file"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
                            <Button
                                Width="110"
                                Command="{Binding ClearThemeLogCommand}"
                                Content="Clear log" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
