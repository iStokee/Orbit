<UserControl
    x:Class="Orbit.Views.SessionsOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Orbit"
    xmlns:models="clr-namespace:Orbit.Models"
    Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}">

    <UserControl.Resources>
        <converters:SessionStateToColorConverter x:Key="SessionStateToColorConverter" />
        <converters:InjectionStateToColorConverter x:Key="InjectionStateToColorConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

        <Style x:Key="SessionsRootGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="16" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity}" Value="1">
                    <Setter Property="Margin" Value="12" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity}" Value="2">
                    <Setter Property="Margin" Value="8" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SessionsHeaderBorderStyle" TargetType="Border" BasedOn="{StaticResource Orbit.ToolHeader}">
            <Setter Property="Padding" Value="12" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity}" Value="1">
                    <Setter Property="Padding" Value="8,6,8,6" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity}" Value="2">
                    <Setter Property="Padding" Value="6,4,6,4" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SessionCardStyle" TargetType="Border" BasedOn="{StaticResource Orbit.ToolCard}">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray5}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity}" Value="1">
                    <Setter Property="Margin" Value="0,0,0,8" />
                    <Setter Property="Padding" Value="10" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity}" Value="2">
                    <Setter Property="Margin" Value="0,0,0,6" />
                    <Setter Property="Padding" Value="8" />
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SessionListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>

    <Grid Style="{StaticResource SessionsRootGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource SessionsHeaderBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Style="{StaticResource Orbit.ToolHeaderIcon}">
                        <iconPacks:PackIconMaterial Kind="MonitorDashboard" Style="{StaticResource Orbit.ToolHeaderIconGlyph}" />
                    </Border>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource Orbit.ToolHeaderTitle}" Text="Session Manager" />
                        <WrapPanel Margin="0,4,0,0" VerticalAlignment="Center">
                            <Border Margin="0,0,6,0" Padding="8,2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                <TextBlock FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray2}" Text="{Binding SessionCount, StringFormat='Sessions: {0}'}" />
                            </Border>
                            <Border Margin="0,0,6,0" Padding="8,2" Background="{DynamicResource MahApps.Brushes.Accent}" CornerRadius="3">
                                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource MahApps.Brushes.AccentForeground}" Text="{Binding InjectedSessionCount, StringFormat='Injected: {0}'}" />
                            </Border>
                            <Border Margin="0,0,6,0" Padding="8,2" Background="{DynamicResource MahApps.Brushes.Gray7}" CornerRadius="3">
                                <TextBlock FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray2}" Text="{Binding ScriptLoadedCount, StringFormat='Scripts Loaded: {0}'}" />
                            </Border>
                            <Border Padding="8,2" Background="{DynamicResource MahApps.Brushes.Gray7}" CornerRadius="3">
                                <TextBlock FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray2}" Text="{Binding ErrorSessionCount, StringFormat='Errors: {0}'}" />
                            </Border>
                        </WrapPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Margin="0,0,8,0" Style="{StaticResource Orbit.ToolHeaderMetaText}" Text="Density:" />
                    <ToggleButton Margin="0,0,4,0" Padding="8,2" Content="Full"
                                  IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Full}}"
                                  Style="{StaticResource MahApps.Styles.ToggleButton}" />
                    <ToggleButton Margin="0,0,4,0" Padding="8,2" Content="Compact"
                                  IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Compact}}"
                                  Style="{StaticResource MahApps.Styles.ToggleButton}" />
                    <ToggleButton Padding="8,2" Content="Minimal"
                                  IsChecked="{Binding Source={x:Static local:Settings.Default}, Path=SessionsHeaderDensity, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:SessionHeaderDensity.Minimal}}"
                                  Style="{StaticResource MahApps.Styles.ToggleButton}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Margin="0,12,0,0" Style="{StaticResource Orbit.ToolCard}">
            <ListBox
                BorderThickness="0"
                Background="Transparent"
                ItemContainerStyle="{StaticResource SessionListItemStyle}"
                ItemsSource="{Binding Sessions}"
                ScrollViewer.CanContentScroll="True"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.VirtualizationMode="Recycling">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource SessionCardStyle}">
                            <Border.InputBindings>
                                <MouseBinding
                                    Command="{Binding DataContext.SetActiveCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    MouseAction="LeftClick" />
                            </Border.InputBindings>

                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Width="44" Height="44" Margin="0,0,10,0" VerticalAlignment="Top">
                                        <Border CornerRadius="12" Background="{Binding State, Converter={StaticResource SessionStateToColorConverter}}" />
                                        <iconPacks:PackIconMaterial Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" Kind="Monitor" />
                                        <Ellipse Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="{Binding InjectionState, Converter={StaticResource InjectionStateToColorConverter}}" Stroke="{DynamicResource MahApps.Brushes.Gray8}" StrokeThickness="1" />
                                    </Grid>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock FontSize="15" FontWeight="SemiBold" Text="{Binding DisplayName}" />
                                        <WrapPanel Margin="0,4,0,0">
                                            <Border Margin="0,0,6,0" Padding="6,2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                                <TextBlock FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray2}" Text="{Binding State}" />
                                            </Border>
                                            <Border Margin="0,0,6,0" Padding="6,2" Background="{DynamicResource MahApps.Brushes.Accent}" CornerRadius="3">
                                                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource MahApps.Brushes.AccentForeground}" Text="{Binding InjectionState}" />
                                            </Border>
                                            <TextBlock VerticalAlignment="Center" FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray3}" Text="{Binding CreatedAt, StringFormat='Created {0:g}'}" />
                                        </WrapPanel>
                                    </StackPanel>
                                </Grid>

                                <Border Margin="0,8,0,0" Padding="8,6" Background="{DynamicResource MahApps.Brushes.Gray8}" BorderBrush="{DynamicResource MahApps.Brushes.Gray6}" BorderThickness="1" CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource MahApps.Brushes.Gray2}" Text="{Binding ScriptRuntimeStatus, StringFormat=Script: {0}}" />
                                        <TextBlock Margin="0,2,0,0" FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray3}" Text="{Binding ActiveScriptName, StringFormat=Active: {0}}" />
                                        <TextBlock Margin="0,2,0,0" FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray4}" Text="{Binding ScriptLastChangedAt, StringFormat=Last Action: {0:g}}" />
                                    </StackPanel>
                                </Border>

                                <Border Margin="0,8,0,0" Padding="8,5" Background="{DynamicResource MahApps.Brushes.Gray9}" BorderBrush="{DynamicResource MahApps.Brushes.Accent3}" BorderThickness="1" CornerRadius="3" Visibility="{Binding LastError, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center" Foreground="{DynamicResource MahApps.Brushes.Accent}" Kind="AlertCircle" />
                                        <TextBlock MaxWidth="700" FontSize="11" Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" Text="{Binding LastError}" TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>

                                <WrapPanel Margin="0,10,0,0" ItemHeight="30" ItemWidth="120" Orientation="Horizontal">
                                    <Button
                                        Margin="0,0,6,6"
                                        Command="{Binding DataContext.SetActiveCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Content="Set Active"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}" />
                                    <Button
                                        Margin="0,0,6,6"
                                        Command="{Binding DataContext.FocusCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Content="Focus"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}" />
                                    <Button
                                        Margin="0,0,6,6"
                                        Command="{Binding DataContext.LoadScriptCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Content="Load Script"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}" />
                                    <Button
                                        Margin="0,0,6,6"
                                        Command="{Binding DataContext.ReloadScriptCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Content="Reload Script"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}" />
                                    <Button
                                        Margin="0,0,6,6"
                                        Command="{Binding DataContext.StopScriptCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Content="Stop Script"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}" />
                                    <Button
                                        Margin="0,0,6,6"
                                        Command="{Binding DataContext.CloseCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Content="Close"
                                        Foreground="#F44336"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}" />
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
