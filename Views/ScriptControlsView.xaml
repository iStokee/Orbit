<UserControl
    x:Class="Orbit.Views.ScriptControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <Style x:Key="Orbit.ScriptCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray6}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,18,0,0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="12"
                        Opacity="0.12"
                        ShadowDepth="2"
                        Color="{DynamicResource MahApps.Colors.ThemeForeground}" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Padding="20,18" CornerRadius="14">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent}" />
                    <GradientStop Offset="0.6" Color="{DynamicResource MahApps.Colors.Accent2}" />
                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.Accent3}" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Width="56"
                    Height="56"
                    VerticalAlignment="Center"
                    Background="#1FFFFFFF"
                    CornerRadius="28"
                    Opacity="0.85">
                    <iconPacks:PackIconMaterial
                        Width="32"
                        Height="32"
                        Margin="0,0,0,2"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Kind="CodeBraces" />
                </Border>
                <StackPanel
                    Grid.Column="1"
                    Margin="16,0,0,0"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="Script Controls" />
                        <Border
                            Margin="14,2,0,0"
                            Padding="6,2"
                            Background="#24FFFFFF"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="HOT RELOAD" />
                        </Border>
                    </StackPanel>
                    <TextBlock
                        Margin="0,4,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Opacity="0.85"
                        Text="Load, relaunch, and iterate on scripts without locking your assemblies." />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource Orbit.ScriptCardStyle}">
            <StackPanel>
                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Visibility="{Binding DataContext.ShowFloatingMenuOnToolTabs, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Border
                        Padding="8,4"
                        Background="{DynamicResource MahApps.Brushes.Accent}"
                        CornerRadius="6"
                        Opacity="0.85">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Kind="CrosshairsGps" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                Text="Target:" />
                        </StackPanel>
                    </Border>
                    <Grid Margin="10,0,0,0">
                        <Border
                            Padding="4"
                            Background="{DynamicResource MahApps.Brushes.Gray7}"
                            CornerRadius="6">
                            <ComboBox
                                MinWidth="220"
                                Padding="6,2"
                                Background="Transparent"
                                BorderThickness="0"
                                IsEnabled="{Binding HasSessions}"
                                ItemsSource="{Binding Sessions}"
                                SelectedItem="{Binding HotReloadTargetSession, Mode=TwoWay}"
                                ToolTip="Select which session receives hot reload commands">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                FontSize="11"
                                                Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                                Text="{Binding InjectionState}" />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                FontSize="11"
                                                Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                                                Text="{Binding RSProcess.Id, StringFormat=PID {0}, TargetNullValue=PID n/a}" />
                                            <TextBlock
                                                Margin="8,0,0,0"
                                                FontSize="11"
                                                Foreground="{DynamicResource MahApps.Brushes.Gray4}"
                                                Text="{Binding ParentProcessId, StringFormat=Parent {0}, TargetNullValue=Parent n/a}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Border>
                        <TextBlock
                            Margin="14,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                            IsHitTestVisible="False"
                            Text="No active session"
                            Visibility="{Binding HasSessions, Converter={StaticResource InverseBooleanConverter}}" />
                    </Grid>
                </StackPanel>

                <TextBlock
                    Margin="0,18,0,4"
                    FontSize="12"
                    Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                    Text="Select or paste a script assembly path. Orbit keeps the DLL loaded from memory, so you can rebuild without closing RuneScape." />

                <Border
                    Margin="0,4,0,16"
                    Padding="2"
                    Background="{DynamicResource MahApps.Brushes.Gray7}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray6}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <ComboBox
                        Height="36"
                        Padding="6,0"
                        FontSize="12"
                        IsEditable="True"
                        ItemsSource="{Binding ScriptManager.RecentScripts}"
                        SelectedItem="{Binding SelectedScript}"
                        Text="{Binding HotReloadScriptPath, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial
                                        Width="14"
                                        Height="14"
                                        Margin="0,0,8,0"
                                        Kind="Star"
                                        Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        FontWeight="SemiBold"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        FontSize="10"
                                        Opacity="0.7"
                                        Text="{Binding FileName}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Height="38"
                        Margin="0,0,6,0"
                        Command="{Binding OpenScriptManagerCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Margin="0,0,6,0"
                                Kind="FolderOpen" />
                            <TextBlock Text="Manage" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Column="1"
                        Height="38"
                        Margin="6,0"
                        Command="{Binding LoadScriptCommand}"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                        ToolTip="Load or reload script (hot-reload enabled - no file locks)">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Margin="0,0,6,0"
                                Kind="Play" />
                            <TextBlock Text="Load / Reload" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Column="2"
                        Height="38"
                        Margin="6,0,0,0"
                        Command="{Binding ReloadScriptCommand}"
                        ToolTip="Quick reload - same as Load/Reload">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="16"
                                Height="16"
                                Margin="0,0,6,0"
                                Kind="Refresh" />
                            <TextBlock Text="Reload" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
