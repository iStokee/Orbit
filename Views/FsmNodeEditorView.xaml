<UserControl x:Class="Orbit.Views.FsmNodeEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="clr-namespace:Orbit.Converters"
             xmlns:viewModels="clr-namespace:Orbit.ViewModels"
             xmlns:models="clr-namespace:Orbit.Models"
             xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance viewModels:FsmNodeEditorViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <converters:FsmConnectorConverter x:Key="FsmConnectorConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />
        <DropShadowEffect x:Key="NodeShadow" BlurRadius="12" ShadowDepth="2" Opacity="0.4" />
    </UserControl.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Orbit.ToolHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource Orbit.ToolHeaderIcon}">
                    <iconPacks:PackIconMaterial Kind="GraphOutline"
                                               Width="32"
                                               Height="32"
                                               Margin="0,0,0,2"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource MahApps.Brushes.AccentForeground}" />
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                    <TextBlock Text="FSM Node Editor"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                    <TextBlock Text="No-code finite state machines: design, run, and share automation flows."
                               FontSize="12"
                               Opacity="0.82"
                               Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource Orbit.ToolCard}" Padding="0" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Margin="16" Grid.Row="0">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <Button 
                                    Margin="0,0,8,0"
                                    Style="{StaticResource MahApps.Styles.Button}"
                                    Command="{Binding StartCommand}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Play" Width="14" Height="14" />
                                        <TextBlock Text="Run" Margin="6,0,0,0" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button 
                                    Margin="0,0,8,0"
                                    Command="{Binding StepCommand}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="SkipNext" Width="14" Height="14" />
                                        <TextBlock Text="Step" Margin="6,0,0,0" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button 
                                    Margin="0,0,8,0"
                                    Command="{Binding StopCommand}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Stop" Width="14" Height="14" />
                                        <TextBlock Text="Stop" Margin="6,0,0,0" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <controls:ToggleSwitch Header="Loop"
                                                   IsOn="{Binding IsLooping}"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   OnContent=""
                                                   OffContent="" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <TextBlock Text="Status:"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                            <TextBlock Text="{Binding Status}"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                       Margin="6,0,0,0" />
                        </StackPanel>
                    </DockPanel>

                    <Grid Grid.Row="1">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1a1f2a" Offset="0" />
                                <GradientStop Color="#11151e" Offset="1" />
                            </LinearGradientBrush>
                        </Grid.Background>

                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto"
                                      PanningMode="Both"
                                      Margin="8">
                            <Grid>
                                <ItemsControl ItemsSource="{Binding AllTransitions}"
                                              IsHitTestVisible="False">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Path StrokeThickness="2.5"
                                                  StrokeDashCap="Round">
                                                <Path.Data>
                                                    <MultiBinding Converter="{StaticResource FsmConnectorConverter}">
                                                        <Binding Path="FromNodeId" />
                                                        <Binding Path="ToNodeId" />
                                                        <Binding Path="DataContext.Script.Nodes"
                                                                RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                    </MultiBinding>
                                                </Path.Data>
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Stroke" Value="{DynamicResource MahApps.Brushes.Gray7}" />
                                                        <Setter Property="Opacity" Value="0.55" />
                                                        <Setter Property="StrokeDashArray" Value="2 1" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Stroke" Value="#6EE86E" />
                                                                <Setter Property="Opacity" Value="0.95" />
                                                                <Setter Property="StrokeDashArray" Value="1" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ItemsControl ItemsSource="{Binding Script.Nodes}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Thumb DragDelta="NodeDragDelta"
                                                   MouseLeftButtonDown="NodeMouseDown"
                                                   Tag="{Binding}">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border Width="220"
                                                                Height="110"
                                                                Padding="10"
                                                                CornerRadius="12"
                                                                Background="{DynamicResource MahApps.Brushes.Gray10}"
                                                                BorderThickness="2"
                                                                BorderBrush="{DynamicResource MahApps.Brushes.Gray6}"
                                                                Effect="{StaticResource NodeShadow}">
                                                            <Border.Style>
                                                                <Style TargetType="Border" BasedOn="{StaticResource {x:Type Border}}">
                                                                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray10}" />
                                                                    <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray7}" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                                        <GradientStop Color="#2f8f3f" Offset="0" />
                                                                                        <GradientStop Color="#1f6a2e" Offset="1" />
                                                                                    </LinearGradientBrush>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                            <Setter Property="BorderBrush" Value="#6EE86E" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static models:FsmNodeType.Start}">
                                                                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Highlight}" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="*" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>

                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0" Width="24" Height="24" CornerRadius="4" Background="{DynamicResource MahApps.Brushes.Gray8}">
                                                                        <iconPacks:PackIconMaterial Kind="CheckboxMultipleBlankOutline"
                                                                                                   Width="16" Height="16"
                                                                                                   HorizontalAlignment="Center"
                                                                                                   VerticalAlignment="Center"
                                                                                                   Foreground="{DynamicResource MahApps.Brushes.Accent}" />
                                                                    </Border>
                                                                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6,0,0,0">
                                                                        <TextBlock Text="{Binding Title}"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                                                        <TextBlock Text="{Binding Type}"
                                                                                   FontSize="11"
                                                                                   Opacity="0.7"
                                                                                   Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                                                    </StackPanel>
                                                                    <Border Grid.Column="2"
                                                                            Background="{DynamicResource MahApps.Brushes.Accent}"
                                                                            Padding="6,2"
                                                                            CornerRadius="4"
                                                                            HorizontalAlignment="Right">
                                                                        <Border.Visibility>
                                                                            <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                                                                                <Binding Path="Id" />
                                                                                <Binding Path="DataContext.Script.StartNodeId"
                                                                                         RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                                            </MultiBinding>
                                                                        </Border.Visibility>
                                                                        <TextBlock Text="Start"
                                                                                   FontSize="10"
                                                                                   FontWeight="Bold"
                                                                                   Foreground="{DynamicResource MahApps.Brushes.AccentForeground}" />
                                                                    </Border>
                                                                </Grid>

                                                                <TextBlock Grid.Row="1"
                                                                           Text="{Binding Description}"
                                                                           TextWrapping="Wrap"
                                                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                           Opacity="0.8"
                                                                           Margin="0,6,0,6" />

                                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding ActionText}"
                                                                               FontSize="11"
                                                                               TextWrapping="Wrap"
                                                                               Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                               Opacity="0.8" />
                                                                    <Border Background="{DynamicResource MahApps.Brushes.Gray8}"
                                                                            Padding="6,2"
                                                                            CornerRadius="4"
                                                                            Margin="8,0,0,0">
                                                                        <TextBlock Text="{Binding DwellMilliseconds, StringFormat={}{0} ms}"
                                                                                   FontSize="10"
                                                                                   Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                                   Opacity="0.8" />
                                                                    </Border>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Border Style="{StaticResource Orbit.ToolCard}">
                        <StackPanel>
                            <TextBlock Text="Script"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Name" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding Script.Name, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="8,0,0,0" />
                                <TextBlock Grid.Row="1"
                                           Text="Description"
                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                           Margin="0,8,0,0" />
                                <TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Text="{Binding Script.Description, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="8,8,0,0"
                                         AcceptsReturn="True"
                                         Height="60"
                                         TextWrapping="Wrap" />
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="New" Command="{Binding NewScriptCommand}" />
                                <Button Content="Load" Command="{Binding LoadScriptCommand}" Margin="6,0,0,0" />
                                <Button Content="Save" Command="{Binding SaveScriptCommand}" Margin="6,0,0,0" />
                                <Button Content="Export" Command="{Binding ExportScriptCommand}" Margin="6,0,0,0" />
                            </StackPanel>
                            <Button Content="Load power fishing template"
                                    Command="{Binding LoadTemplateCommand}"
                                    Margin="0,6,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Orbit.ToolCard}">
                        <StackPanel>
                            <TextBlock Text="Runtime"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                            <TextBlock Text="Signals"
                                       Margin="0,10,0,6"
                                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                            <ItemsControl ItemsSource="{Binding Signals}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,2">
                                            <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" />
                                            <TextBox Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Margin="8,0,0,0"
                                                     Width="180" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button Content="Clear highlights" Command="{Binding ClearTrailCommand}" Margin="0,8,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Orbit.ToolCard}">
                        <StackPanel>
                            <TextBlock Text="Node"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />

                            <TextBlock Text="Select a node to edit."
                                       Foreground="{DynamicResource MahApps.Brushes.Gray7}"
                                       Visibility="{Binding CanEditNode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, FallbackValue=Visible}"
                                       Margin="0,8,0,8" />

                            <Grid DataContext="{Binding SelectedNode}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Title" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="8,0,0,0" />

                                <TextBlock Grid.Row="1" Text="Description"
                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                           Margin="0,8,0,0" />
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         Margin="8,8,0,0"
                                         Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         Height="60"
                                         TextWrapping="Wrap" />

                                <TextBlock Grid.Row="2" Text="Type"
                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                           Margin="0,8,0,0" />
                                <ComboBox Grid.Row="2" Grid.Column="1"
                                          Margin="8,8,0,0"
                                          SelectedItem="{Binding Type, Mode=TwoWay}">
                                    <ComboBoxItem Content="{x:Static models:FsmNodeType.Start}" />
                                    <ComboBoxItem Content="{x:Static models:FsmNodeType.Action}" />
                                    <ComboBoxItem Content="{x:Static models:FsmNodeType.Condition}" />
                                    <ComboBoxItem Content="{x:Static models:FsmNodeType.Terminal}" />
                                </ComboBox>

                                <TextBlock Grid.Row="3" Text="Dwell (ms)"
                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                           Margin="0,8,0,0" />
                                <TextBox Grid.Row="3" Grid.Column="1"
                                         Margin="8,8,0,0"
                                         Text="{Binding DwellMilliseconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="4" Text="Action / notes"
                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                           Margin="0,8,0,0" />
                                <TextBox Grid.Row="4"
                                         Grid.Column="1"
                                         Margin="8,8,0,0"
                                         Text="{Binding ActionText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="Add node" Command="{Binding AddNodeCommand}" />
                                <Button Content="Remove node" Command="{Binding RemoveNodeCommand}" IsEnabled="{Binding CanEditNode}" Margin="6,0,0,0" />
                                <Button Content="Set as start" Command="{Binding SetAsStartCommand}" IsEnabled="{Binding CanEditNode}" Margin="6,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Orbit.ToolCard}">
                        <StackPanel>
                            <DockPanel Margin="0,0,0,10">
                                <TextBlock Text="Transitions"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                <Button Content="Add transition"
                                        DockPanel.Dock="Right"
                                        Command="{Binding AddTransitionCommand}"
                                        IsEnabled="{Binding CanEditTransitions}" />
                            </DockPanel>

                            <ItemsControl ItemsSource="{Binding SelectedNode.Transitions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource MahApps.Brushes.Gray9}"
                                                CornerRadius="8"
                                                Padding="10"
                                                Margin="0,0,0,8"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="Target"
                                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                                <ComboBox Grid.Column="1"
                                                          SelectedValue="{Binding ToNodeId, Mode=TwoWay}"
                                                          DisplayMemberPath="Title"
                                                          SelectedValuePath="Id"
                                                          ItemsSource="{Binding DataContext.Script.Nodes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          Margin="6,0,0,0" />

                                                <TextBlock Grid.Row="1" Text="Condition key"
                                                           Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                           Margin="0,8,0,0" />
                                                <TextBox Grid.Row="1" Grid.Column="1"
                                                         Margin="6,8,0,0"
                                                         Text="{Binding ConditionKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                                                            Orientation="Horizontal"
                                                            Margin="0,8,0,0"
                                                            >
                                                    <CheckBox Content="Expect true"
                                                              IsChecked="{Binding ExpectedValue, Mode=TwoWay}" />
                                                    <CheckBox Content="Fallback"
                                                              IsChecked="{Binding IsFallback, Mode=TwoWay}"
                                                              Margin="8,0,0,0" />
                                                    <TextBox Width="140"
                                                             Text="{Binding Label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="Label"
                                                             Margin="8,0,0,0" />
                                                    <Button Content="Remove"
                                                            Command="{Binding DataContext.RemoveTransitionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="8,0,0,0" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
