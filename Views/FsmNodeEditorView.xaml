<UserControl
    x:Class="Orbit.Views.FsmNodeEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:Orbit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Orbit.Models"
    xmlns:utils="clr-namespace:Orbit.Utilities"
    xmlns:viewModels="clr-namespace:Orbit.ViewModels"
    x:Name="Root"
    d:DataContext="{d:DesignInstance viewModels:FsmNodeEditorViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <UserControl.InputBindings>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <converters:FsmConnectorConverter x:Key="FsmConnectorConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />
        <DropShadowEffect
            x:Key="NodeShadow"
            BlurRadius="12"
            Opacity="0.4"
            ShadowDepth="2" />
        <DataTemplate x:Key="NodeParamStringTemplate">
            <TextBox Margin="0,4,0,0" Text="{Binding Value.RawValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </DataTemplate>
        <DataTemplate x:Key="NodeParamNumberTemplate">
            <TextBox Margin="0,4,0,0" Text="{Binding Value.RawValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </DataTemplate>
        <DataTemplate x:Key="NodeParamBoolTemplate">
            <CheckBox Margin="0,6,0,0" IsChecked="{Binding Value.BoolValue, Mode=TwoWay}" />
        </DataTemplate>
        <DataTemplate x:Key="NodeParamEnumTemplate">
            <ComboBox
                Margin="0,4,0,0"
                ItemsSource="{Binding Definition.EnumValues}"
                SelectedItem="{Binding Value.RawValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </DataTemplate>
        <DataTemplate x:Key="NodeParamListTemplate">
            <StackPanel>
                <TextBox
                    Height="70"
                    Margin="0,4,0,0"
                    AcceptsReturn="True"
                    Text="{Binding Value.RawValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Visibility="Visible" />
                <Button
                    Margin="0,6,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding DataContext.AddListItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                    Content="Add line" />
                <ItemsControl ItemsSource="{Binding Value.Values}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,4,4,0"
                                Padding="6,2"
                                Background="{DynamicResource MahApps.Brushes.Gray9}"
                                CornerRadius="4">
                                <TextBlock Text="{Binding}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
        <utils:NodeParameterTemplateSelector
            x:Key="NodeParameterTemplateSelector"
            BoolTemplate="{StaticResource NodeParamBoolTemplate}"
            EnumTemplate="{StaticResource NodeParamEnumTemplate}"
            ListTemplate="{StaticResource NodeParamListTemplate}"
            NumberTemplate="{StaticResource NodeParamNumberTemplate}"
            StringTemplate="{StaticResource NodeParamStringTemplate}" />
        <Style x:Key="EditorColumnHeader" TargetType="Border">
            <Setter Property="Padding" Value="10" />
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray9}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray7}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Orbit.ToolHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource Orbit.ToolHeaderIcon}">
                    <iconPacks:PackIconMaterial
                        Width="32"
                        Height="32"
                        Margin="0,0,0,2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                        Kind="GraphOutline" />
                </Border>

                <StackPanel
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Text="Orbit Builder" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                        Opacity="0.82"
                        Text="Visual automation builder: design, test, and share no-code flows." />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding DataContext.LeftColumnWidth, ElementName=Root}" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="{Binding DataContext.RightColumnWidth, ElementName=Root}" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Margin="0,0,16,0"
                Padding="0"
                Style="{StaticResource Orbit.ToolCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="12,12,12,2"
                        Style="{StaticResource EditorColumnHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ToggleButton
                                Grid.Column="0"
                                Padding="4"
                                Background="Transparent"
                                BorderThickness="0"
                                IsChecked="{Binding IsLeftCollapsed, Mode=TwoWay}"
                                ToolTip="Collapse/expand catalog">
                                <ToggleButton.Style>
                                    <Style BasedOn="{StaticResource MahApps.Styles.Button.Square}" TargetType="ToggleButton">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <iconPacks:PackIconMaterial
                                                    Width="16"
                                                    Height="16"
                                                    Kind="ChevronLeftCircle" />
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <iconPacks:PackIconMaterial
                                                            Width="16"
                                                            Height="16"
                                                            Kind="ChevronRightCircle" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                    Text="Catalog" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{DynamicResource MahApps.Brushes.Gray7}"
                                    Text="Click to insert, or drag into the canvas" />
                            </StackPanel>
                            <Border
                                Grid.Column="2"
                                Padding="8,4"
                                Background="{DynamicResource MahApps.Brushes.Gray8}"
                                CornerRadius="6">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial
                                        Width="14"
                                        Height="14"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Kind="Puzzle" />
                                    <TextBlock
                                        Margin="6,0,0,0"
                                        FontSize="11"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Opacity="0.75"
                                        Text="Nodes" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!--  Content (hidden when collapsed)  -->
                    <Grid Grid.Row="1">
                        <ScrollViewer
                            Margin="12,4,12,12"
                            VerticalScrollBarVisibility="Auto"
                            Visibility="{Binding IsLeftCollapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}">
                            <StackPanel>
                                <ListBox
                                    Margin="0,0,0,10"
                                    BorderThickness="0"
                                    ItemsSource="{Binding Categories}"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Margin="0,6,6,6"
                                                Padding="8"
                                                Background="{DynamicResource MahApps.Brushes.Gray10}"
                                                CornerRadius="6">
                                                <TextBlock
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                    Text="{Binding Title}" />
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <ItemsControl ItemsSource="{Binding FilteredDefinitions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                MinWidth="220"
                                                Margin="0,0,0,10"
                                                Padding="10"
                                                Background="{DynamicResource MahApps.Brushes.Gray9}"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                                                BorderThickness="1"
                                                CornerRadius="10">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                            FontWeight="SemiBold"
                                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                            Text="{Binding Title}" />
                                                        <Border
                                                            Margin="8,0,0,0"
                                                            Padding="6,2"
                                                            Background="{DynamicResource MahApps.Brushes.Accent}"
                                                            CornerRadius="6"
                                                            Visibility="{Binding HasQuery, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <TextBlock
                                                                FontSize="10"
                                                                FontWeight="Bold"
                                                                Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                                                Text="Query" />
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock
                                                        MaxHeight="54"
                                                        Margin="0,4,0,6"
                                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                        Opacity="0.8"
                                                        Text="{Binding ShortDescription}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="Wrap" />
                                                    <Button
                                                        Command="{Binding DataContext.CreateNodeFromDefinitionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Content="Add node" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <Border
                Grid.Column="1"
                Margin="0,0,16,0"
                Padding="0"
                Style="{StaticResource Orbit.ToolCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="12,12,12,2"
                        Style="{StaticResource EditorColumnHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border
                                    Width="28"
                                    Height="28"
                                    Background="{DynamicResource MahApps.Brushes.Gray8}"
                                    CornerRadius="6">
                                    <iconPacks:PackIconMaterial
                                        Width="18"
                                        Height="18"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Kind="Graph" />
                                </Border>
                                <StackPanel Margin="8,0,0,0">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Text="Canvas" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource MahApps.Brushes.Gray7}"
                                        Text="Run, step, or edit nodes inline" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    Margin="0,0,8,0"
                                    Command="{Binding StartCommand}"
                                    Style="{StaticResource MahApps.Styles.Button}">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="14"
                                                Height="14"
                                                Kind="Play" />
                                            <TextBlock Margin="6,0,0,0" Text="Run" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button Margin="0,0,8,0" Command="{Binding StepCommand}">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="14"
                                                Height="14"
                                                Kind="SkipNext" />
                                            <TextBlock Margin="6,0,0,0" Text="Step" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button Margin="0,0,8,0" Command="{Binding StopCommand}">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="14"
                                                Height="14"
                                                Kind="Stop" />
                                            <TextBlock Margin="6,0,0,0" Text="Stop" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Rectangle
                                    Width="1"
                                    Margin="8,4"
                                    Fill="{DynamicResource MahApps.Brushes.Gray7}" />
                                <Button
                                    Margin="0,0,8,0"
                                    Command="{Binding DeleteSelectedCommand}"
                                    ToolTip="Delete selected nodes (Del)">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial
                                                Width="14"
                                                Height="14"
                                                Kind="Delete" />
                                            <TextBlock Margin="6,0,0,0" Text="Delete" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Rectangle
                                    Width="1"
                                    Margin="8,4"
                                    Fill="{DynamicResource MahApps.Brushes.Gray7}" />
                                <controls:ToggleSwitch
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    Header="Loop"
                                    IsOn="{Binding IsLooping}"
                                    OffContent=""
                                    OnContent="" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Border
                                    Margin="0,0,8,0"
                                    Padding="6,2"
                                    Background="{DynamicResource MahApps.Brushes.Gray8}"
                                    CornerRadius="4"
                                    ToolTip="Hold Space or Middle Mouse to pan the canvas">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="12"
                                            Height="12"
                                            Kind="CursorMove"
                                            Opacity="0.7" />
                                        <TextBlock
                                            Margin="4,0,0,0"
                                            FontSize="11"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Opacity="0.7"
                                            Text="Space to pan" />
                                    </StackPanel>
                                </Border>
                                <Border
                                    Margin="0,0,12,0"
                                    Padding="4,2"
                                    Background="{DynamicResource MahApps.Brushes.Gray8}"
                                    CornerRadius="4"
                                    ToolTip="Use Ctrl+Scroll to zoom, or click buttons">
                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                        <Button
                                            x:Name="ZoomOutButton"
                                            Padding="4,2"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ZoomOutButton_Click">
                                            <iconPacks:PackIconMaterial
                                                Width="14"
                                                Height="14"
                                                Kind="MagnifyMinus" />
                                        </Button>
                                        <TextBlock
                                            x:Name="ZoomLevelText"
                                            Width="44"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="100%"
                                            TextAlignment="Center" />
                                        <Button
                                            x:Name="ZoomInButton"
                                            Padding="4,2"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ZoomInButton_Click">
                                            <iconPacks:PackIconMaterial
                                                Width="14"
                                                Height="14"
                                                Kind="MagnifyPlus" />
                                        </Button>
                                        <Button
                                            x:Name="ZoomResetButton"
                                            Margin="4,0,0,0"
                                            Padding="4,2"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ZoomResetButton_Click"
                                            ToolTip="Reset zoom to 100%">
                                            <iconPacks:PackIconMaterial
                                                Width="14"
                                                Height="14"
                                                Kind="MagnifyRemoveOutline" />
                                        </Button>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Text="Status:" />
                                    <TextBlock
                                        Margin="6,0,0,0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Text="{Binding Status}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0" Color="#1a1f2a" />
                                <GradientStop Offset="1" Color="#11151e" />
                            </LinearGradientBrush>
                        </Grid.Background>

                        <ScrollViewer
                            x:Name="CanvasScrollViewer"
                            Margin="8"
                            HorizontalScrollBarVisibility="Auto"
                            PanningMode="Both"
                            PreviewMouseDown="CanvasScrollViewer_OnPreviewMouseDown"
                            PreviewMouseMove="CanvasScrollViewer_OnPreviewMouseMove"
                            PreviewMouseUp="CanvasScrollViewer_OnPreviewMouseUp"
                            PreviewMouseWheel="CanvasScrollViewer_OnPreviewMouseWheel"
                            VerticalScrollBarVisibility="Auto">
                            <Grid
                                x:Name="CanvasContainer"
                                MinWidth="2000"
                                MinHeight="1500">
                                <Grid.LayoutTransform>
                                    <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1" />
                                </Grid.LayoutTransform>
                                <ItemsControl IsHitTestVisible="False" ItemsSource="{Binding AllTransitions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Path StrokeDashCap="Round" StrokeThickness="2.5">
                                                <Path.Data>
                                                    <MultiBinding Converter="{StaticResource FsmConnectorConverter}">
                                                        <Binding Path="FromNodeId" />
                                                        <Binding Path="ToNodeId" />
                                                        <Binding Path="DataContext.Script.Nodes" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                    </MultiBinding>
                                                </Path.Data>
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Stroke" Value="{DynamicResource MahApps.Brushes.Gray7}" />
                                                        <Setter Property="Opacity" Value="0.55" />
                                                        <Setter Property="StrokeDashArray" Value="2 1" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Stroke" Value="#6EE86E" />
                                                                <Setter Property="Opacity" Value="0.95" />
                                                                <Setter Property="StrokeDashArray" Value="1" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ItemsControl x:Name="NodeCanvas" ItemsSource="{Binding Script.Nodes}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas x:Name="NodeCanvasPanel" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Thumb
                                                DragDelta="NodeDragDelta"
                                                MouseLeftButtonDown="NodeMouseDown"
                                                Tag="{Binding}">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border
                                                            Width="220"
                                                            MinHeight="130"
                                                            Padding="10"
                                                            Background="{DynamicResource MahApps.Brushes.Gray10}"
                                                            BorderBrush="{DynamicResource MahApps.Brushes.Gray6}"
                                                            BorderThickness="2"
                                                            CornerRadius="12"
                                                            Effect="{StaticResource NodeShadow}">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray10}" />
                                                                    <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray7}" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                                        <GradientStop Offset="0" Color="#2f8f3f" />
                                                                                        <GradientStop Offset="1" Color="#1f6a2e" />
                                                                                    </LinearGradientBrush>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                            <Setter Property="BorderBrush" Value="#6EE86E" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static models:FsmNodeType.Start}">
                                                                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Highlight}" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="*" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>

                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border
                                                                        Grid.Column="0"
                                                                        Width="24"
                                                                        Height="24"
                                                                        Background="{DynamicResource MahApps.Brushes.Gray8}"
                                                                        CornerRadius="4">
                                                                        <iconPacks:PackIconMaterial
                                                                            Width="16"
                                                                            Height="16"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                                                            Kind="CheckboxMultipleBlankOutline" />
                                                                    </Border>
                                                                    <StackPanel
                                                                        Grid.Column="1"
                                                                        Margin="6,0,0,0"
                                                                        Orientation="Vertical">
                                                                        <TextBlock
                                                                            FontWeight="SemiBold"
                                                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                            Text="{Binding Title}" />
                                                                        <TextBlock
                                                                            FontSize="11"
                                                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                            Opacity="0.7"
                                                                            Text="{Binding DefinitionTitle}" />
                                                                    </StackPanel>
                                                                    <Border
                                                                        Grid.Column="2"
                                                                        Padding="6,2"
                                                                        HorizontalAlignment="Right"
                                                                        Background="{DynamicResource MahApps.Brushes.Accent}"
                                                                        CornerRadius="4">
                                                                        <Border.Visibility>
                                                                            <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                                                                                <Binding Path="Id" />
                                                                                <Binding Path="DataContext.Script.StartNodeId" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                                            </MultiBinding>
                                                                        </Border.Visibility>
                                                                        <TextBlock
                                                                            FontSize="10"
                                                                            FontWeight="Bold"
                                                                            Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                                                            Text="Start" />
                                                                    </Border>
                                                                </Grid>

                                                                <TextBlock
                                                                    Grid.Row="1"
                                                                    MaxHeight="42"
                                                                    Margin="0,6,0,6"
                                                                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                    Opacity="0.8"
                                                                    Text="{Binding Description}"
                                                                    TextTrimming="CharacterEllipsis"
                                                                    TextWrapping="Wrap"
                                                                    ToolTip="{Binding Description}" />

                                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                                    <TextBlock
                                                                        FontSize="11"
                                                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                        Opacity="0.8"
                                                                        Text="{Binding ActionText}"
                                                                        TextWrapping="Wrap" />
                                                                    <Border
                                                                        Margin="8,0,0,0"
                                                                        Padding="6,2"
                                                                        Background="{DynamicResource MahApps.Brushes.Gray8}"
                                                                        CornerRadius="4">
                                                                        <TextBlock
                                                                            FontSize="10"
                                                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                                            Opacity="0.8"
                                                                            Text="{Binding DwellMilliseconds, StringFormat={}{0} ms}" />
                                                                    </Border>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!--  Selection box overlay  -->
                                <Canvas x:Name="SelectionOverlay" IsHitTestVisible="False" />
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <Border
                Grid.Column="2"
                Margin="0,0,0,0"
                Padding="0"
                Style="{StaticResource Orbit.ToolCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="12,12,12,2"
                        Style="{StaticResource EditorColumnHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ToggleButton
                                Grid.Column="0"
                                Padding="4"
                                Background="Transparent"
                                BorderThickness="0"
                                IsChecked="{Binding IsRightCollapsed, Mode=TwoWay}"
                                ToolTip="Collapse/expand inspector">
                                <ToggleButton.Style>
                                    <Style BasedOn="{StaticResource MahApps.Styles.Button.Square}" TargetType="ToggleButton">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <iconPacks:PackIconMaterial
                                                    Width="16"
                                                    Height="16"
                                                    Kind="ChevronRightCircle" />
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <iconPacks:PackIconMaterial
                                                            Width="16"
                                                            Height="16"
                                                            Kind="ChevronLeftCircle" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                    Text="Inspector" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{DynamicResource MahApps.Brushes.Gray7}"
                                    Text="Configure script, runtime signals, and selected nodes" />
                            </StackPanel>
                            <Border
                                Grid.Column="2"
                                Padding="8,4"
                                Background="{DynamicResource MahApps.Brushes.Gray8}"
                                CornerRadius="6">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial
                                        Width="14"
                                        Height="14"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Kind="Tune" />
                                    <TextBlock
                                        Margin="6,0,0,0"
                                        FontSize="11"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Opacity="0.75"
                                        Text="Details" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!--  Content (hidden when collapsed)  -->
                    <ScrollViewer
                        Grid.Row="1"
                        VerticalScrollBarVisibility="Auto"
                        Visibility="{Binding IsRightCollapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}">
                        <StackPanel Margin="12,4,12,12">
                            <Expander
                                Margin="0,0,0,8"
                                IsExpanded="True"
                                Style="{StaticResource MahApps.Styles.Expander}">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                            Kind="ScriptText" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Script" />
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel Margin="4,6,4,0">
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Name" />
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="8,0,0,0"
                                            Text="{Binding Script.Name, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,8,0,0"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Description" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Height="60"
                                            Margin="8,8,0,0"
                                            AcceptsReturn="True"
                                            Text="{Binding Script.Description, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap" />
                                    </Grid>

                                    <StackPanel Margin="0,12,0,0" Orientation="Horizontal">
                                        <Button Command="{Binding NewScriptCommand}" Content="New" />
                                        <Button
                                            Margin="6,0,0,0"
                                            Command="{Binding LoadScriptCommand}"
                                            Content="Load" />
                                        <Button
                                            Margin="6,0,0,0"
                                            Command="{Binding SaveScriptCommand}"
                                            Content="Save" />
                                        <Button
                                            Margin="6,0,0,0"
                                            Command="{Binding ExportScriptCommand}"
                                            Content="Export" />
                                    </StackPanel>
                                    <Button
                                        Margin="0,6,0,0"
                                        Command="{Binding LoadTemplateCommand}"
                                        Content="Load power fishing template" />
                                </StackPanel>
                            </Expander>

                            <Expander
                                Margin="0,0,0,8"
                                IsExpanded="True"
                                Style="{StaticResource MahApps.Styles.Expander}">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                            Kind="Pulse" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Runtime" />
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel Margin="4,6,4,0">
                                    <TextBlock
                                        Margin="0,0,0,6"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Text="Signals" />
                                    <ItemsControl ItemsSource="{Binding Signals}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <DockPanel Margin="0,4">
                                                    <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" />
                                                    <TextBox
                                                        Width="180"
                                                        Margin="8,0,0,0"
                                                        Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </DockPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Button
                                        Margin="0,8,0,0"
                                        Command="{Binding ClearTrailCommand}"
                                        Content="Clear highlights" />
                                </StackPanel>
                            </Expander>

                            <Expander
                                Margin="0,0,0,8"
                                IsExpanded="True"
                                Style="{StaticResource MahApps.Styles.Expander}">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                            Kind="VectorDifference" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Node" />
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel Margin="4,6,4,0">
                                    <DockPanel>
                                        <Border
                                            Margin="0,0,8,0"
                                            Padding="8,2"
                                            HorizontalAlignment="Left"
                                            Background="{DynamicResource MahApps.Brushes.Accent}"
                                            CornerRadius="8"
                                            Visibility="{Binding CanEditNode, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource MahApps.Brushes.AccentForeground}"
                                                Text="{Binding SelectedNodes.Count, StringFormat={}{0} selected}" />
                                        </Border>
                                        <TextBlock
                                            Foreground="{DynamicResource MahApps.Brushes.Gray7}"
                                            Text="Click a node on canvas to select, or drag to box-select multiple."
                                            TextWrapping="Wrap"
                                            Visibility="{Binding CanEditNode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True, FallbackValue=Visible}" />
                                    </DockPanel>

                                    <TextBlock
                                        Margin="0,8,0,0"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Text="Definition" />
                                    <ComboBox
                                        Margin="0,6,0,8"
                                        DisplayMemberPath="Title"
                                        ItemsSource="{Binding Definitions}"
                                        SelectedItem="{Binding SelectedNodeDefinition, Mode=TwoWay}" />

                                    <Grid DataContext="{Binding SelectedNode}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" Text="Title" />
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="8,0,0,0"
                                            Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,8,0,0"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Description" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Height="60"
                                            Margin="8,8,0,0"
                                            AcceptsReturn="True"
                                            Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Margin="0,8,0,0"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Type" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="8,8,0,0"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="{Binding Type}" />

                                        <TextBlock
                                            Grid.Row="3"
                                            Margin="0,8,0,0"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Dwell (ms)" />
                                        <TextBox
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="8,8,0,0"
                                            Text="{Binding DwellMilliseconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                        <TextBlock
                                            Grid.Row="4"
                                            Margin="0,8,0,0"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Notes" />
                                        <TextBox
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="8,8,0,0"
                                            Text="{Binding ActionText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap" />
                                    </Grid>

                                    <TextBlock
                                        Margin="0,12,0,6"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                        Text="Parameters" />
                                    <ItemsControl ItemsSource="{Binding ParameterBindings}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:NodeParamBinding}">
                                                <Border
                                                    Margin="0,0,0,8"
                                                    Padding="8"
                                                    Background="{DynamicResource MahApps.Brushes.Gray9}"
                                                    CornerRadius="8">
                                                    <StackPanel>
                                                        <TextBlock
                                                            FontWeight="SemiBold"
                                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                            Text="{Binding Definition.Label}" />
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="{DynamicResource MahApps.Brushes.Gray7}"
                                                            Text="{Binding Definition.Placeholder}"
                                                            TextWrapping="Wrap" />
                                                        <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource NodeParameterTemplateSelector}" />
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                        <Button Command="{Binding AddNodeCommand}" Content="Add node" />
                                        <Button
                                            Margin="6,0,0,0"
                                            Command="{Binding RemoveNodeCommand}"
                                            Content="Remove node"
                                            IsEnabled="{Binding CanEditNode}" />
                                        <Button
                                            Margin="6,0,0,0"
                                            Command="{Binding SetAsStartCommand}"
                                            Content="Set as start"
                                            IsEnabled="{Binding CanEditNode}" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>

                            <Expander
                                Margin="0,0,0,8"
                                IsExpanded="True"
                                Style="{StaticResource MahApps.Styles.Expander}">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                            Kind="SignDirection" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                            Text="Transitions" />
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel Margin="4,6,4,0">
                                    <DockPanel Margin="0,0,0,6">
                                        <Button
                                            Command="{Binding AddTransitionCommand}"
                                            Content="Add transition"
                                            DockPanel.Dock="Right"
                                            IsEnabled="{Binding CanEditTransitions}" />
                                    </DockPanel>

                                    <ListBox
                                        BorderThickness="0"
                                        ItemsSource="{Binding SelectedNode.Transitions}"
                                        SelectedItem="{Binding SelectedTransition, Mode=TwoWay}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Margin="0,0,0,8"
                                                    Padding="10"
                                                    Background="{DynamicResource MahApps.Brushes.Gray9}"
                                                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" Text="Target" />
                                                        <ComboBox
                                                            Grid.Column="1"
                                                            Margin="6,0,0,0"
                                                            DisplayMemberPath="Title"
                                                            ItemsSource="{Binding DataContext.Script.Nodes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            SelectedValue="{Binding ToNodeId, Mode=TwoWay}"
                                                            SelectedValuePath="Id" />

                                                        <TextBlock
                                                            Grid.Row="1"
                                                            Margin="0,8,0,0"
                                                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                                                            Text="Condition key" />
                                                        <ComboBox
                                                            Grid.Row="1"
                                                            Grid.Column="1"
                                                            Margin="6,8,0,0"
                                                            IsEditable="True"
                                                            ItemsSource="{Binding DataContext.SignalSuggestions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            Text="{Binding ConditionKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                        <StackPanel
                                                            Grid.Row="2"
                                                            Grid.ColumnSpan="2"
                                                            Margin="0,8,0,0"
                                                            Orientation="Horizontal">
                                                            <CheckBox Content="Expect true" IsChecked="{Binding ExpectedValue, Mode=TwoWay}" />
                                                            <CheckBox
                                                                Margin="8,0,0,0"
                                                                Content="Fallback"
                                                                IsChecked="{Binding IsFallback, Mode=TwoWay}" />
                                                            <TextBox
                                                                Width="140"
                                                                Margin="8,0,0,0"
                                                                Text="{Binding Label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                ToolTip="Label" />
                                                            <Button
                                                                Margin="8,0,0,0"
                                                                Command="{Binding DataContext.RemoveTransitionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Content="Remove" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
