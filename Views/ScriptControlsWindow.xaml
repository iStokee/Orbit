<Controls:MetroWindow x:Class="Orbit.Views.ScriptControlsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:converters="clr-namespace:Orbit.Converters"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      mc:Ignorable="d"
                      Title="Script Controls"
                      Icon="/Orbital.jpg"
                      TitleCharacterCasing="Normal"
                      Height="420"
                      Width="560"
                      MinHeight="360"
                      MinWidth="520"
                      WindowStartupLocation="CenterOwner">

    <Controls:MetroWindow.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconMaterial Kind="CodeBraces" Height="20" Width="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="0,0,0,10" FontSize="18" FontWeight="SemiBold" Text="Script Controls"
                   Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />

        <StackPanel Grid.Row="1">
            <TextBlock Margin="0,0,0,6" FontSize="12" Opacity="0.85"
                       Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                       Text="Select or enter script path:" />
            <ComboBox Height="32" Margin="0,0,0,12" FontSize="12"
                      IsEditable="True"
                      ItemsSource="{Binding ScriptManager.RecentScripts}"
                      SelectedItem="{Binding SelectedScript}"
                      Text="{Binding HotReloadScriptPath, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="14" Height="14" Margin="0,0,8,0" Kind="Star"
                                                        Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}" />
                            <TextBlock Margin="0,0,10,0" FontWeight="SemiBold" Text="{Binding Name}" />
                            <TextBlock FontSize="10" Opacity="0.7" Text="{Binding FileName}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Height="36" Margin="0,0,4,0" Command="{Binding OpenScriptManagerCommand}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Width="16" Height="16" Margin="0,0,6,0" Kind="FolderOpen" />
                        <TextBlock Text="Manage" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" Height="36" Margin="4,0" Command="{Binding LoadScriptCommand}"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Width="16" Height="16" Margin="0,0,6,0" Kind="Play" />
                        <TextBlock Text="Load" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" Height="36" Margin="4,0,0,0" Command="{Binding ReloadScriptCommand}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Width="16" Height="16" Margin="0,0,6,0" Kind="Refresh" />
                        <TextBlock Text="Reload" />
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
